<% title 'Trang Chủ' %>
<% content_for :metas do %>
<!-- FACEBOOK -->
    <meta property="og:locale" content="vi-VN" />
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="Tìm Hàng Công Nghệ"/>
    <meta property="og:description" content="Tìm Hàng Công Nghệ là đơn vị cung cấp các sản phẩm, dịch vụ thuộc lĩnh vực Công Nghệ Thông Tin do Công Ty TNHH Giải Pháp CNTT Và Truyền Thông Hoàng Khang phụ trách và phát triển."/>
    <meta property="og:url" content="<%= request.url %>"/>
    <meta property="og:site_name" content="Trang Chủ - Tìm Hàng Công Nghệ" />
    <meta property="og:image" content="https://timhangcongnghe.com/frontend/image/thcn-web-share.png"/>
    <meta property="og:image:width" content="1200"/>
	<meta property="og:image:height" content="628"/>
    <!--TWITTER -->
    <meta property="og:url" content="<%= request.url %>"/>
    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:title" content="Tìm Hàng Công Nghệ" />
    <meta name="twitter:description" content="Tìm Hàng Công Nghệ là đơn vị cung cấp các sản phẩm, dịch vụ thuộc lĩnh vực Công Nghệ Thông Tin do Công Ty TNHH Giải Pháp CNTT Và Truyền Thông Hoàng Khang phụ trách và phát triển."/>
    <meta name="twitter:image" content="https://timhangcongnghe.com/frontend/image/thcn-web-share.png"/>
<% end %>
<main id="content" class="page-main">
    <div class="so-spotlight1 ">
        <div class="container">
            <div class="row">
                <div id="yt_header_right" class="col-lg-offset-3 col-lg-9 col-md-12 col-slideshow">
                    <div class="slider-container ">
                        <div id="so-slideshow" class=""><%= render 'erp/online_store/frontend/modules/home/slideshow' %></div>
                    </div>
                </div>
            </div>
            <div class="block-banner banners banner-sn-1 wow fadeInUp"><%= render 'erp/online_store/frontend/modules/home/banner' %></div>
        </div>
    </div>
    <div class="so-spotlight3">
        <div class="container"><%= render "erp/online_store/frontend/modules/home/hot_categories" %></div>
    </div>
    <div class="so-spotlight3">
        <div class="container">
            <div class="module banner">
                <div class="banners">
                    <div><% if !@long_banner.nil? %>
                        <%= link_to image_tag(@long_banner.image_url.thumb, alt: @long_banner.name, title: @long_banner.name),
                            @long_banner.link_url, title: @long_banner.name %>
                    <% end %></div>
                </div>
            </div>
        </div>
    </div>    
</main>