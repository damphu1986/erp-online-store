<!-- Mod Supercategory -->
<div class="module cus-style-supper-cate <%= @menu_hot.style_color%>">
    <div class="header">
        <h3 class="modtitle">
            <span class="icon-color">
                <%= @menu_hot.style_icon.html_safe %>
                <%= @menu_hot.name %>
                <small class="arow-after"></small>
            </span>
            <strong class="line-color"></strong>
        </h3>
    </div>
    <div class="so-sp-cat first-load">
        <div class="spcat-wrap ">

            <div class="spcat-tabs-container">
                <!--Begin Tabs-->
                <div class="spcat-tabs-wrap">
                    <ul class="spcat-tabs cf">
                        <li class="spcat-tab">
                            <span class="spcat-tab-label">
                                <%= link_to "Xem tất cả".html_safe, menu_link(@menu_hot), title: @menu_hot.name, class: "" %>
                            </span>
                        </li>
                    </ul>
                </div>
                <!-- End Tabs-->
            </div>

            <div class="main-left">
                <div class="banner-post-text">
                    <% if @menu_hot.image_url_1.present? %>
                        <% if params[:child_1_id].present? %>
                            <% if @child_1.image_url_1.present? %>
                            <%= link_to image_tag(@child_1.image_url_1.menu_hot_image_1, alt: @child_1.name, title: @child_1.name), @child_1.image_menu_link_1, title: @child_1.name %>
                            <% else %>
                            <%= link_to image_tag(@menu_hot.image_url_1.menu_hot_image_1, alt: @menu_hot.name, title: @menu_hot.name), @menu_hot.image_menu_link_1, title: @menu_hot.name %>
                            <% end %>
                        <% elsif params[:child_2_id].present? %>
                            <% if @child_2.image_url_1.present? %>
                            <%= link_to image_tag(@child_2.image_url_1.menu_hot_image_1, alt: @child_2.name, title: @child_2.name), @child_2.image_menu_link_1, title: @child_2.name %>
                            <% else %>
                            <%= link_to image_tag(@menu_hot.image_url_1.menu_hot_image_1, alt: @menu_hot.name, title: @menu_hot.name), @menu_hot.image_menu_link_1, title: @menu_hot.name %>
                            <% end %>
                        <% else %>
                            <%= link_to image_tag(@menu_hot.image_url_1.menu_hot_image_1, alt: @menu_hot.name, title: @menu_hot.name), @menu_hot.image_menu_link_1, title: @menu_hot.name %>
                        <% end %>
                    <% end %>
                </div>
                <div class="hot-category">
                    <div class="category-wrap-cat">
                        <div class="title-imageslider  sp-cat-title-parent">
                            <% if params[:child_2_id].present? %>
                                <%= @child_2.name %>
                            <% elsif params[:child_1_id].present? %>
                                <%= @child_1.name %>
                            <% else %>
                                CHUYÊN MỤC SẢN PHẨM
                            <% end %>
                        </div>
                        <div id="cat_slider_3" class="slider">
                            <div class="cat_slider_inner so_category_type_default">
                                <% if params[:child_1_id].present? and @child_1.children.is_hot.count > 0 %>
                                    <% @child_1.children.is_hot.each do |child_2| %>
                                        <div class="item child_hot_item">
                                            <div class="item-inner">
                                                <div class="cat_slider_title <%= 'current' if child_2.id == params[:child_2_id].to_i %>">
                                                    <%= link_to '<i class="fa fa-caret-right"></i> '.html_safe + child_2.name, erp_online_store.category_box_path(menu_hot_id: @menu_hot.id, child_1_id: @child_1.id, child_2_id: child_2.id), title: child_2.name, class: "ajax_link" %>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                    <div class="item">
                                        <div class="item-inner">
                                            <div class="cat_slider_title">
                                                <%= link_to '<i class="fa fa-arrow-left"></i> Trở lại'.html_safe, erp_online_store.category_box_path(menu_hot_id: @menu_hot.id, child_1_id: (params[:child_2_id].present? ? @child_1.id : nil)), title: @menu_hot.name, class: "ajax_link" %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="item-inner">
                                            <div class="cat_slider_title view_all">
                                                <%= link_to 'Xem tất cả'.html_safe, menu_link((@child_2.present? ? @child_2 : @child_1)), title: (@child_2.present? ? @child_2.name : @child_1.name), class: "" %>
                                            </div>
                                        </div>
                                    </div>
                                <% else %>
                                    <% @menu_hot.children.is_hot.each do |child_1| %>
                                        <div class="item">
                                            <div class="item-inner">
                                                <div class="cat_slider_title <%= 'current' if child_1.id == params[:child_1_id].to_i %>">
                                                    <%= link_to '<i class="fa fa-caret-right"></i> '.html_safe + child_1.name, erp_online_store.category_box_path(menu_hot_id: @menu_hot.id, child_1_id: child_1.id), title: child_1.name, class: "ajax_link" %>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                    <% if params[:child_1_id].present? %>
                                        <div class="item">
                                            <div class="item-inner">
                                                <div class="cat_slider_title">
                                                    <%= link_to '<i class="fa fa-arrow-left"></i> Trở lại'.html_safe, erp_online_store.category_box_path(menu_hot_id: @menu_hot.id), title: @menu_hot.name, class: "ajax_link" %>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                    <div class="item">
                                        <div class="item-inner">
                                            <div class="cat_slider_title view_all">
                                                <%= link_to 'Xem tất cả'.html_safe, menu_link((@child_1.present? ? @child_1 : @menu_hot)), title: (@child_1.present? ? @child_1.name : @menu_hot.name), class: "" %>
                                            </div>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-right">
                <div class="banner-pre-text">
                    <% if @menu_hot.image_url_2.present? %>
                        <% if params[:child_1_id].present? %>
                            <% if @child_1.image_url_2.present? %>
                            <%= link_to image_tag(@child_1.image_url_2.menu_hot_image_2, alt: @child_1.name, title: @child_1.name), @child_1.image_menu_link_2, title:  @child_1.name %>
                            <% else %>
                            <%= link_to image_tag(@menu_hot.image_url_2.menu_hot_image_2, alt: @menu_hot.name, title: @menu_hot.name), @menu_hot.image_menu_link_2, title: @menu_hot.name %>
                            <% end %>
                        <% elsif params[:child_2_id].present? %>
                            <% if @child_2.image_url_2.present? %>
                            <%= link_to image_tag(@child_2.image_url_2.menu_hot_image_2, alt: @child_2.name, title: @child_2.name), @child_2.image_menu_link_2, title: @child_2.name %>
                            <% else %>
                            <%= link_to image_tag(@menu_hot.image_url_2.menu_hot_image_2, alt: @menu_hot.name, title: @menu_hot.name), @menu_hot.image_menu_link_2, title: @menu_hot.name %>
                            <% end %>
                        <% else %>
                            <%= link_to image_tag(@menu_hot.image_url_2.menu_hot_image_2, alt: @menu_hot.name, title: @menu_hot.name), @menu_hot.image_menu_link_2, title: @menu_hot.name %>
                        <% end %>
                    <% end %>
                </div>
                <div class="spcat-items-container products-list grid show-pre show-row">
                    <!--Begin Items-->
                    <div class="spcat-items spcat-items-loaded items-category-sales product-layout spcat-items-selected" data-total="9">
                        <div class="spcat-items-inner spcat00-4 spcat01-4 spcat02-3 spcat03-2 spcat04-1 flip">
                            <div class="ltabs-items-inner ltabs-slider ">
                                <% if @products.count > 0 %>
                                    <% @products.each do |product| %>
                                    <div class="ltabs-item ">
                                        <div class="item-inner product-thumb product-item-container transition ">
                                            <div class="left-block">
                                                <div class="product-image-container">
                                                    <div class="image">
                                                        <a class="lt-image" href="<%= product_link(product) %>" target="_self" title="<%= product.product_name %>">
                                                            <%= image_tag product_image(product.product_images, 'first', 'thumb193'), alt: product.product_name, class: "img-1 img-responsive", title: product.product_name %>
                                                            <%= image_tag product_image(product.product_images, 'second', 'thumb193'), alt: product.product_name, class: "img-2 img-responsive", title: product.product_name %>
                                                        </a>
                                                    </div>
                                                    <%= quick_actions(product) %>
                                                </div>
                                                <% if product.is_new? %>
                                                <span class="label label-new">Mới</span>
                                                <% end %>
                                                <% if product.is_deal? %>
                                                <span class="label label-sale">Giảm giá</span>
                                                <% end %>
                                                <%= count_down(product.deal_from_date, product.deal_to_date) %>
                                            </div>
                                            <div class="right-block">
                                                <div class="caption">
                                                    <div class="rating">
                                                        <%= stars(product.average_stars) %>
                                                    </div>
                                                    <h4><%= link_to truncate(product.product_name, length: 40), product_link(product), title: product.product_name %></h4>
                                                    <p class="price">
                                                        <% if product.is_sold_out? || product.is_call? %>
                                                            <span class="price sold_out_true">Giá liên hệ</span>
                                                        <% else %>
                                                            <span class="price-new"><%= format_price(product.product_price) %>
                                                            <% if product.is_deal %>
                                                                <br><span class="price-old"><%= format_price(product.price) %></span>
                                                                <span class="label label-percent">-<%= product.deal_percent %>%</span>
                                                            <% end %>
                                                        <% end %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% end %>
                                <% else %>
                                    <div class="alert alert-danger" style="text-align: center; width: 80%;"><i class="fa fa-exclamation-circle"></i>
                                        <span>Hiện chưa có sản phẩm cho chuyên mục này.</span>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End Items-->
            </div>
        </div>
    </div>
</div>
<!-- End Mod -->
