<% title ((params[:category_id].present? and @article.present?) ? @article.name : 'Tìm Hàng Công Nghệ') %>
<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= @article.present? ? (link_to @article.name, 'javascript:void(0)') : '' %></li>
    </ul>
    <div class="row">
        <aside class="col-sm-4 col-md-3" id="column-left">
            <%= render "erp/online_store/frontend/information/policy_left_sidebar" %>
        </aside>
        <div id="content" class="col-md-9 col-sm-8">
            <% if @article.present? %>
                <div class="article-info">
                    <div class="blog-header">
                        <h3><%= @article.name %></h3>
                    </div>
                    <div class="article-description">
                        <%= @article.content.html_safe %>
                    </div>
                </div>
            <% else %>
                <div class="alert alert-warning">
                    <i class="fa fa-warning"></i> Bài viết hiện đang được cập nhật.
                </div>
            <% end %>
        </div>
    </div>
</div>