<% title "Góp Ý & Liên Hệ" %>
<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= link_to "Góp Ý & Liên Hệ", "javascript:void(0)" %></li>
    </ul>
    <div class="row">
        <div id="content" class="col-sm-12">
            <div class="info-contact clearfix">
                <div class="col-lg-6 col-sm-6 col-xs-12 info-store">
                    <fieldset>
                        <legend>THÔNG TIN LIÊN HỆ</legend>
                    </fieldset>
                    <% if !@company_info.nil? %>
                        <address>
                            <% if full_address(@company_info).present? %>
                                <div class="clearfix form-group">
                                    <strong class="company-name"><%= @company_info.contact_name %></strong>
                                </div>
                            <% end %>
                            <% if @company_info.note.present? %>
                                <div class="clearfix form-group">
                                    <div class="comment">             
                                        <%= @company_info.note %>
                                    </div>
                                </div>
                            <% end %>
                            <div class="clearfix form-group">
                                <strong>Địa chỉ: </strong><%= full_address(@company_info) %>
                            </div>
                            <div class="clearfix form-group">
                                <strong>Email: </strong><%= mail_to @company_info.email, @company_info.email %> | <strong>Điện thoại: </strong><a href="tel:<%= @company_info.phone %>"><%= @company_info.phone %></a>
                            </div>
                        </address>
                    <% end %>
                    <% if @company_info.contacts.count > 0 %>
                        <% @company_info.contacts.each do |contact_child| %>
                            <div class="row">
                                <div class="col-sm-10">
                                    <hr class="topfix">  
                                </div>
                            </div>
                            <address>
                                <div class="clearfix form-group">
                                    <strong class="company-name"><%= contact_child.contact_name %></strong>
                                </div>
                                <% if contact_child.note.present? %>
                                <div class="clearfix form-group">
                                    <div class="comment">             
                                        <i class="fa fa-quote-left"></i> <%= contact_child.note %>
                                    </div>
                                </div>
                                <% end %>
                                <% if full_address(contact_child).present? %>
                                    <div class="clearfix form-group">
                                        <strong>Địa chỉ: </strong><%= full_address(contact_child) %>
                                    </div>
                                <% end %>
                                <div class="clearfix form-group">
                                    <strong>Email: </strong><%= mail_to contact_child.email, contact_child.email %> | <strong>Điện thoại: </strong><a href="tel:<%= contact_child.phone %>"><%= contact_child.phone %></a>
                                </div>
                            </address>
                        <% end %>
                    <% end %>
                </div>
                <div class="col-lg-6 col-sm-6 col-xs-12 contact-form">
                    <%= form_for '', url: erp_online_store.contact_us_path, html: {class: "contact_form"} do |f| %>
                        <fieldset>
                            <legend>GỬI LỜI NHẮN HOẶC GÓP Ý CHO CHÚNG TÔI</legend>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[name]"
                                            placeholder="Nhập họ & tên của bạn..."
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[email]"
                                            placeholder="Nhập địa chỉ email của bạn..."
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[phone]"
                                            placeholder="Nhập số điện thoại của bạn..."
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <textarea name="msg[message]"
                                            placeholder="Vui lòng nhập nội dung góp ý hoặc liên hệ của bạn tại đây..."
                                            rows="6" class="form-control required"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="buttons">
                                            <div class="pull-right">
                                                <button class="btn btn-default buttonGray" id="btn-radius" type="submit">
                                                    <i class="fa fa-send"></i> <span>Gửi</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    <% end %>
                </div>
            </div>                    
        </div>
    </div>
</div>
<div class="map-contact clearfix">
    <%= render "erp/online_store/frontend/modules/information/map_canvas" %>
</div>