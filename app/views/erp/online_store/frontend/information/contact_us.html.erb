<% title "Góp Ý & Liên Hệ" %>
<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= link_to "Góp Ý & Liên Hệ", "javascript:void(0)" %></li>
    </ul>
    <div class="row">
        <div id="content" class="col-sm-12">
            <div class="info-contact clearfix">
                <div class="col-lg-6 col-sm-6 col-xs-12 info-store">
                    <fieldset>
                        <legend>Liên hệ với chúng tôi.</legend>
                    </fieldset>
                    <% if !@company_info.nil? %>
                        <address>
                            <div class="clearfix form-group">
                                <strong class="company-name"><%= @company_info.contact_name %></strong>
                            </div>
                            <div class="clearfix form-group">
                                <strong>Địa chỉ: </strong><%= @company_info.address %>
                            </div>
                            <div class="clearfix form-group">
                                <strong>Email: </strong><%= @company_info.email %>
                            </div>
                            <div class="clearfix form-group">
                                <strong>Điện thoại: </strong><%= @company_info.phone %>
                            </div>
                            <div class="comment">             
                                <%= @company_info.note %>
                            </div>
                        </address>
                    <% end %>
                    <% if !@company_info.nil? %>
                        <div class="row">
                            <div class="col-sm-10">
                                <hr>  
                            </div>
                        </div>
                        <address>
                            <div class="clearfix form-group">
                                <strong class="company-name"><%= @company_info.contact_name %></strong>
                            </div>
                            <div class="clearfix form-group">
                                <strong>Địa chỉ: </strong><%= @company_info.address %>
                            </div>
                            <div class="clearfix form-group">
                                <strong>Email: </strong><%= @company_info.email %>
                            </div>
                            <div class="clearfix form-group">
                                <strong>Điện thoại: </strong><%= @company_info.phone %>
                            </div>
                            <div class="comment">             
                                <%= @company_info.note %>
                            </div>
                        </address>
                    <% end %>
                </div>
                <div class="col-lg-6 col-sm-6 col-xs-12 contact-form">
                    <%= form_for '', url: erp_online_store.contact_us_path, html: {class: "contact_form"} do |f| %>
                        <fieldset>
                            <legend>Chúng tôi hân hạnh được hỗ trợ Quý khách.</legend>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[name]"
                                            placeholder="Nhập họ và tên của bạn"
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[email]"
                                            placeholder="Nhập địa chỉ email của bạn"
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[phone]"
                                            placeholder="Nhập số điện thoại của bạn"
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <textarea name="msg[message]"
                                            placeholder="Vui lòng ghi rõ và chi tiết nội dung góp ý hoặc liên hệ của bạn"
                                            rows="6" class="form-control required"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="buttons">
                                            <div class="pull-right">
                                                <button class="btn btn-default buttonGray" id="btn-radius" type="submit">
                                                    <i class="fa fa-send"></i> <span>Gửi</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    <% end %>
                </div>
            </div>
            <div class="map-contact maps clearfix">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d19002.261848128557!2d106.65044278985695!3d10.845318866040584!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb45cb7e22ebf8fda!2zQ8O0bmcgVHkgVE5ISCBHaeG6o2kgUGjDoXAgQ8O0bmcgTmdo4buHIFRow7RuZyBUaW4gVsOgIFRydXnhu4FuIFRow7RuZyBIb8OgbmcgS2hhbmc!5e0!3m2!1svi!2s!4v1489374706144"
                        width="100%" height="350" frameborder="0" style="border:0" allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>
</div>