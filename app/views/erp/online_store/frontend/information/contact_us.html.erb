<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= link_to 'Góp ý và Liên hệ', 'javascript:void(0)' %></li>
    </ul>
    <div class="row">
        <div id="content" class="col-sm-12">
            <div class="info-contact clearfix">
                <div class="col-lg-6 col-sm-6 col-xs-12 info-store">
                    <h1 class="about-title"><span>Thông Tin Liên Hệ</span></h1>
                    <address>
                        <div class="clearfix form-group">
                            <strong class="company-name">Công Ty TNHH Giải Pháp CNTT Và Truyền Thông Hoàng Khang - Tìm Hàng Công Nghệ</strong>
                        </div>
                        <div class="clearfix form-group">
                            <strong>Địa chỉ: </strong>188 Đường Số 1, Phường 16, Quận Gò Vấp, TP. Hồ Chí Minh
                        </div>
                        <div class="clearfix form-group">
                            <strong>Email: </strong><%= mail_to 'kinhdoanh@timhangcongnghe.com', 'kinhdoanh@timhangcongnghe.com', title: 'kinhdoanh@timhangcongnghe.com' %> | <%= mail_to 'kinhdoanh@hoangkhang.com.vn', 'kinhdoanh@hoangkhang.com.vn', title: 'kinhdoanh@hoangkhang.com.vn' %>
                        </div>
                        <div class="clearfix form-group">
                            <strong>Điện thoại: </strong><%= link_to '(028) 3984 7690', 'tel:02839847690', title: '(028) 3984 7690' %>
                        </div>
                    </address>
                    <div class="row"><div class="col-sm-10"><hr class="topfix"></div></div>
                    <address>
                        <div class="clearfix form-group">
                            <strong class="company-name">Hợp Tác Kinh Doanh</strong>
                        </div>
                        <div class="clearfix form-group">
                            <div class="comment"><i class="fa fa-quote-left"></i> Liên hệ hợp tác kinh doanh sản phẩm, nâng cao doanh số bán hàng</div>
                        </div>
                        <div class="clearfix form-group">
                            <strong>Địa chỉ: </strong>188 Đường Số 1, Phường 16, Quận Gò Vấp, TP. Hồ Chí Minh
                        </div>
                        <div class="clearfix form-group">
                            <strong>Email: </strong><%= mail_to 'kinhdoanh@timhangcongnghe.com', 'kinhdoanh@timhangcongnghe.com', title: 'kinhdoanh@timhangcongnghe.com' %> | <%= mail_to 'kinhdoanh@hoangkhang.com.vn', 'kinhdoanh@hoangkhang.com.vn', title: 'kinhdoanh@hoangkhang.com.vn' %>
                        </div>
                        <div class="clearfix form-group">
                            <strong>Điện thoại: </strong><%= link_to '(028) 3984 7690', 'tel:02839847690', title: '(028) 3984 7690' %>
                        </div>
                    </address>
                </div>
                <div class="col-lg-6 col-sm-6 col-xs-12 contact-form">
                    <%= form_for '', url: erp_online_store.contact_us_path, html: {class: "contact_form"} do |f| %>
                        <fieldset>
                            <legend>GỬI LỜI NHẮN HOẶC GÓP Ý CHO CHÚNG TÔI</legend>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[name]"
                                            placeholder="Nhập họ & tên của bạn..."
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[email]"
                                            placeholder="Nhập địa chỉ email của bạn..."
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" name="contact[phone]"
                                            placeholder="Nhập số điện thoại của bạn..."
                                            class="form-control required" />
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <textarea name="msg[message]"
                                            placeholder="Vui lòng nhập nội dung góp ý hoặc liên hệ của bạn tại đây..."
                                            rows="6" class="form-control required"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="buttons">
                                            <div class="pull-right">
                                                <button class="btn btn-default buttonGray" id="btn-radius" type="submit">
                                                    <i class="fa fa-send"></i> <span>Gửi lời nhắn</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    <% end %>
                </div>
            </div>                    
        </div>
    </div>
</div>
<div class="map-contact clearfix"><%= render "erp/online_store/frontend/modules/information/map_canvas" %></div>