<div class="left-content-product col-lg-12 col-xs-12">
    <div class="row">
        <% if product_images.count > 1 %>
            <div class="content-product-left  col-sm-6 col-xs-12 ">                            
                <div id="thumb-slider-vertical" class="thumb-vertical-outer">
                    <span class="btn-more prev-thumb nt"><i class="fa fa-chevron-up"></i></span>
                    <span class="btn-more next-thumb nt"><i class="fa fa-chevron-down"></i></span>
                    <ul class="thumb-vertical">
                        <% product_images.each_with_index do |product_image,index| %>
                        <li class="owl2-item">
                            <a data-caption="<%= @product.get_long_name %> - Hình <%= index+1 %>"
                               data-index="<%= index %>" class="img thumbnail "
                               data-image="<%= product_image.image_url.thumb650 %>"
                               title="<%= @product.get_long_name %>">
                               <%= image_tag product_image.image_url.thumb170, alt: @product.get_long_name, title: @product.get_long_name %>
                            </a>
                        </li>
                        <% end %>
                    </ul>
                </div>
                <div id="large-image" class="large-image vertical">
                    <img class="product-image-zoom"
                         data-src="<%= @product.main_image.image_url.thumb650 %>"
                         src="<%= @product.main_image.image_url.thumb650 %>"
                         alt="<%= @product.get_long_name %>" title="<%= @product.get_long_name %>">
                </div>
                <% if @product.product_intro_link.present? %><%= link_to '<i class="fa fa-youtube-play"></i>'.html_safe,
                    @product.product_intro_link,
                    class: "open-video-link thumb-video pull-left",
                    title: @product.get_long_name, rel: 'nofollow' %><% end %>                            
            </div>
        <% else %>
            <div class="content-product-left  col-sm-5 col-xs-12 ">
                <% if product_images.count == 0 %><div class="large-image vertical">
                    <%= image_tag '/frontend/image/shop/image-coming-soon.jpg', alt: @product.get_long_name, title: @product.get_long_name %>
                </div><% else %><div class="large-image vertical">
                    <%= image_tag @product.main_image.image_url.thumb650, alt: @product.get_long_name, title: @product.get_long_name %>
                </div><% end %>
                <% if @product.product_intro_link.present? %><%= link_to '<i class="fa fa-youtube-play"></i>'.html_safe,
                    @product.product_intro_link, class: "open-video-link thumb-video pull-left", title: @product.get_long_name, rel: 'nofollow' %><% end %>
            </div>
        <% end %>
        <% if product_images.count > 1 %>
            <div class="content-product-right col-sm-6 col-xs-12">
        <% else %>
            <div class="content-product-right col-sm-7 col-xs-12">
        <% end %>
            <div class="title-product">
                <h1><%= @product.get_long_name %></h1>
            </div>
            <div class="box-review form-group">
                <div class="ratings">
                    <div class="rating-box"><%= stars(@product.average_stars) %></div>
                </div>
                <a class="write_review_button" rel="nofollow" title="Đánh giá sản phẩm" href="javascript:void(0);" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;">Đánh giá sản phẩm</a> |
                <a class="write_review_button" rel="nofollow" title="Bình luận về sản phẩm" href="javascript:void(0);" onclick="$('a[href=\'#tab-comment\']').trigger('click'); return false;">Bình luận về sản phẩm</a>
            </div>
            <div class="product-label form-group form-group-price-sold-out">
                <div class="product_page_price price">
                    <% if @product.is_sold_out? || @product.is_call? %>
                        <span class="price-sold-out sold_out_true">Liên hệ: (028) 3984 7690</span>
                    <% elsif @product.product_price.nil? %>
                        <span class="price-sold-out price-updated">Đang cập nhật giá</span>
                    <% else %>
                        <span class="price-new"><%= format_price(@product.product_price) %></span>
                        <% if @product.is_deal? %>
                        <span class="price-old"><%= format_price(@product.price) %></span>
                        <% if !@product.deal_percent.nil? %><span class="label label-percent">-<%= @product.deal_percent %>%</span><% end %>
                        <% end %>
                    <% end %>
                </div>
            </div>                
            <% if @product.get_product_property_array.count > 0 %>
            <div class="product-box-desc <%= 'no_border_button' if @product.is_sold_out %>">
                <div class="inner-box-desc">
                    <span>Thương hiệu: </span><strong><%= link_to @product.brand_name, brand_link(@product.brand),title: @product.brand_name, target: '_blank' %></strong></td>
                    <% if @product.warranty.present? %><br><span>Thời gian bảo hành: </span><%= @product.warranty %> tháng<% end %>                    
                    <% product_short_descipriton_values_array = @product.product_short_descipriton_values_array %>
                    <% if product_short_descipriton_values_array.count > 2 %>
                        <% product_short_descipriton_values_array.each do |row| %>
                            <br><span><%= row[:name] %>: </span><%= row[:values].join(", ") %>
                        <% end %>
                    <% else %>
                        <% @product.product_values_array.each do |group| %>
                            <h4 class=""><%= group[:group].name %></h4>
                            <% group[:properties].each do |property| %>
                                <br><span><%= property[:property].name %>: </span><%= property[:values].join(", ") %>
                            <% end %>
                        <% end %>
                    <% end %>
                        <% if @product.dimentions.present? %><br><span>Kích thước vận chuyển: </span><%= @product.dimentions %><% end %>
                        <% if @product.weights.present? %><br><span>Trọng lượng vận chuyển: </span><%= @product.weights %><% end %>
                    </table>
                </div>                                
            </div>
            <% end %>
            <hr>
            <% if @product.is_sold_out? || @product.is_call? || @product.product_price.nil? %>
            <div id="product">
                <div class="compare-product">SO SÁNH SẢN PHẨM</div>
                <div class="form-group box-info-product">                                    
                    <div class="add-to-links wish_comp">
                        <ul class="blank list-inline">
                            <li class="compare">
                                <%= form_tag erp_online_store.add_to_compare_frontend_compare_items_path, class: 'add-compare-form' do %>
                                    <%= hidden_field_tag "product_id", @product.id %>
                                    <button class="btn btn-mega btn-lg add-to-compare" title="So sánh sản phẩm"><i class="fa fa-window-restore"></i> So sánh</button>
                                <% end %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <% else %>
            <div id="product">
                <div class="buy-product">ĐẶT MUA SẢN PHẨM</div>
                <div class="form-group box-info-product">
                    <%= form_tag erp_online_store.add_to_cart_frontend_cart_items_path, class: 'add-cart-form' do %>
                        <%= hidden_field_tag "product_id", @product.id %>
                        <div class="option quantity">
                            <div class="input-group quantity-control" unselectable="on" style="-webkit-user-select: none;">
                                <label>Số lượng: </label>
                                <input class="form-control" type="text" name="quantity" value="1">
                                <span class="input-group-addon product_quantity_down">−</span>
                                <span class="input-group-addon product_quantity_up">+</span>
                            </div>
                        </div>
                        <div class="cart">
                            <button class="btn btn-mega btn-lg add-to-cart"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng</button>
                        </div>
                    <% end %>
                    <div class="quick-cart">
                        <%= link_to '<i class="fa fa-opencart"></i> Mua ngay'.html_safe,
                            erp_online_store.quick_order_path(product_id: @product.id),
                            class: "btn btn-mega btn-lg add-to-quick-cart add-to-cart quick-buy-ajax ajax-link",
                            'data-type': 'ajax' %>
                    </div>
                    <div class="add-to-links wish_comp">
                        <ul class="blank list-inline">
                            <li>
                                
                            </li>
                            <li class="compare">
                                <%= form_tag erp_online_store.add_to_compare_frontend_compare_items_path, class: 'add-compare-form' do %>
                                    <%= hidden_field_tag "product_id", @product.id %>
                                    <button class="btn btn-mega btn-lg add-to-compare" title="So sánh sản phẩm"><i class="fa fa-window-restore"></i> So sánh</button>
                                <% end %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        <% end %>
        <div class="call-center">
            <span>
                <strong>SĐT liên hệ: </strong>
                <%= link_to '(028) 3984 7690 ', 'tel:02839847690',
                    title: '(028) 3984 7690' %>
            </span><br>
            <span>
                <strong>Email liên hệ 1: </strong>
                <%= mail_to 'kinhdoanh@hoangkhang.com.vn', 'kinhdoanh@hoangkhang.com.vn',
                    title: 'kinhdoanh@hoangkhang.com.vn' %>
            </span><br>
            <span>
                <strong>Email liên hệ 2: </strong>
                <%= mail_to 'kinhdoanh@timhangcongnghe.com', 'kinhdoanh@timhangcongnghe.com',
                    title: 'kinhdoanh@timhangcongnghe.com' %>
            </span><br>
        </div>
        </div>
    </div>
</div>