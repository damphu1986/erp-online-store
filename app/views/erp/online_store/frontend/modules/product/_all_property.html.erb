<% title @product.name %>
<% product_images = @product.product_images %>

<% content_for :metas do %>
    <!-- for Facebook -->
    <meta property="og:url" content="<%= request.url %>"/>
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= @product.get_long_name %>"/>
    <% if @meta_description.present? %>
    <meta property="og:description" content="<%= @meta_description %>"/>
    <% else %>
    <meta property="og:description" content="Tìm Hàng Công Nghệ là trang thương mại điện tử về các sản phẩm công nghệ thông tin do Công Ty TNHH Giải Pháp Công Nghệ Thông Tin Và Truyền Thông Hoàng Khang (Hoang Khang Incotech) đầu tư và phát triển với tiêu chí phục vụ Khách hàng theo hướng chuyên nghiệp và hiện đại."/>
    <% end %>
    <meta property="og:image" content="https://timhangcongnghe.com<%= product_images.first.image_url %>" />
<% end %>

<div class="product-box-desc modal-box mt-0 mb-0-720" style="max-width: 600px">
    <div class="inner-box-desc">
        Thông tin kỹ thuật chi tiết: <h1 class="mt-0 product-box-name"><%= link_to @product.name, product_link(@product), title: @product.name %></h1>
        <table width="100%">
            <% @product.product_values_array.each do |group| %>
                <tr>
                    <td colspan="2"><h4><%= group[:group].name %></h4></td>
                </tr>
                <% group[:properties].each do |property| %>
                    <tr class="property-value">
                        <td valign="top" class="text-nowrap"><span><%= property[:property].name %></span></td>
                        <td class="pl-10">
                            <%= property[:values].count <= 4 ? property[:values].join(", ") : ('<ul><li>' + property[:values].join('</li><li>') + '</li></ul>').html_safe %>
                        </td>
                    </tr>
                <% end %>
            <% end %>
        </table>
    </div>
</div>