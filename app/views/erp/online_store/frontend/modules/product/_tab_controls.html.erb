<ul class="nav nav-tabs">
    <% if product.description.present? %>
        <li class="active"><a data-toggle="tab" href="#tab-description" title="Giới thiệu sản phẩm" rel="nofollow">Giới thiệu</a></li>
        <li class="item_nonactive"><a data-toggle="tab" href="#tab-specs" title="Thông số kỹ thuật" rel="nofollow">Thông số kỹ thuật</a></li>        
    <% else %>
        <li class="active"><a data-toggle="tab" href="#tab-specs" title="Thông số kỹ thuật" rel="nofollow">Thông số kỹ thuật</a></li>
    <% end %>
    <li class="item_nonactive"><a id="a-tab-review" data-toggle="tab" href="#tab-review" title="Đánh giá sản phẩm" rel="nofollow">
        Đánh giá (<%= product.ratings_active.count %>)
    </a></li>
    <li class="item_nonactive"><a data-toggle="tab" href="#tab-comment" title="Bình luận khách hàng" rel="nofollow">
        Bình luận (<%= @total_comments %>)
    </a></li>
</ul>
<div class="tab-content col-xs-12">
    <% if product.description.present? %>
    <div id="tab-description" class="tab-pane fade active in"><%= product.description.html_safe %></div>
    <div id="tab-specs" class="tab-pane fade"><%= render 'erp/online_store/frontend/modules/product/tab_controls/specification', product: product %></div>
    <% else %><div id="tab-specs" class="tab-pane fade active in"><%= render 'erp/online_store/frontend/modules/product/tab_controls/specification', product: product %></div><% end %>
    <div id="tab-review" class="tab-pane fade comment_box" data-url="<%= erp_online_store.product_ratings_path(product_id: product.id) %>"></div>
    <div id="tab-comment" class="tab-pane fade comment_box" data-url="<%= erp_online_store.product_comments_path(product_id: product.id) %>"></div>
</div>