<% if user_signed_in? %>
    <% if @rating.id.present? %>
        <h2 id="review-title">Đánh giá của <%= current_user.name %></h2>
    <% else %>
        <h2 id="review-title">Mời <%= current_user.name %> đánh giá sản phẩm</h2>
    <% end %>
        
    <%= form_for Erp::Products::Rating.new, url: erp_online_store.product_ratings_path(product_id: @product.id), html: { class: 'comment_form' } do |f| %>
        <input type="hidden" name="rating[product_id]" value="<%= @product.id %>" />
        <input type="hidden" name="rating[id]" value="<%= @rating.id %>" />
        
        <div class="rating-form-inner <%= 'hide' if @rating.id.present? %>">
            <div class="ratingStar">
                <span class="lStar"><b>
                    <% if @rating.id.present? %>
                        Đánh giá của bạn:
                    <% else %>
                        Chọn đánh giá của bạn:
                    <% end %>
                </b></span>
                <span class="lStar">
                    <fieldset class="starability-grow">
                        <input type="radio" <%= 'checked' if @rating.star == 5 %> id="growing-rate5" name="rating[star]" value="5" />
                        <label for="growing-rate5" title="Tuyệt vời"></label>
                        
                        <input type="radio" <%= 'checked' if @rating.star == 4 %> id="growing-rate4" name="rating[star]" value="4" />
                        <label for="growing-rate4" title="Tốt"></label>
                        
                        <input type="radio" <%= 'checked' if @rating.star == 3 %> id="growing-rate3" name="rating[star]" value="3" />
                        <label for="growing-rate3" title="Bình thường"></label>
                        
                        <input type="radio" <%= 'checked' if @rating.star == 2 %> id="growing-rate2" name="rating[star]" value="2" />
                        <label for="growing-rate2" title="Không tốt"></label>
                        
                        <input type="radio" <%= 'checked' if @rating.star == 1 %> id="growing-rate1" name="rating[star]" value="1" />
                        <label for="growing-rate1" title="Rất không tốt"></label>
                    </fieldset>
                </span>                
            </div>
            
            <div class="row ratingComment ">
                <div class="col-sm-12">
                    <div class="form-group">
                        <textarea class="form-control"
                            name="rating[content]"
                            id="btn-radius"
                            placeholder="Mời bạn để lại nhận xét về sản phẩm tại đây...">
                            <%= @rating.content %>
                        </textarea>
                    </div>  
                </div>
                <div class="col-sm-12">
                    <div class="buttons clearfix">
                        <button class="btn buttonGray" id="btn-radius" type="submit">
                            <span>Gửi</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% if @rating.id.present? %>
            <div class="content-data-summary">
                <div class="content-header">
                    <span class="content-rating right">
                        <div class="ratings">
                            <div class="rating-box">
                                <%= raw stars(@rating.star) %>
                            </div>
                        </div>
                    </span>
                    <span class="content-meta">
                        <h3 class="author right"><a href="#"><%= @rating.user_name %></a></h3>
                        <span class="date-time"><%= relative_time(@rating.created_at) %></span>
                    </span>
                    <span class="full-right">
                        <a class="right favor satis"
                            href="#Edit"
                            onclick="$('.rating-form-inner').removeClass('hide');$(this).parents('.content-data-summary').hide()"
                            title="Chỉnh sửa đánh giá">
                                <i class="fa fa-pencil"></i>
                        </a>
                    </span>
                </div>
                <div class="content-title">
                    <p><%= @rating.content %></p>
                </div>
            </div>
        <% end %>
    <% end %>
<% else %>
    <h3 id="review-title">Vui lòng
    <a class="ajax-link text-teal" data-type="ajax" href="<%= erp.new_user_session_path %>">đăng nhập</a>
    để bình luận </h3>
<% end %>

<hr>
<div id="review">
    <h3 id="review-title">Có <%= ratings.count %> đánh giá cho sản phẩm này</h3>
    <% ratings.each do |rating| %>
        <div class="content-data-summary">
            <div class="content-header">
                <span class="content-rating right">
                    <div class="ratings">
                        <div class="rating-box">
                            <%= raw stars(rating.star) %>
                        </div>
                    </div>
                </span>
                <span class="content-meta">
                    <h3 class="author right"><a href="#"><%= rating.user_name %></a></h3>
                    <span class="date-time"><%= relative_time(rating.created_at) %></span>
                </span>
                <% if can? :delete, rating %>
                <span class="full-right">
                    <a class="favor satis remove-comment"
                        href="<%= erp_online_store.delete_product_rating_path(rating) %>"
                        data-method="delete"
                        title="Xóa đánh giá"
                        data-confirm="Bạn muốn xóa đánh giá này?">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </span>
                <% end %>
            </div>
            <div class="content-title">
                <p><%= rating.content %></p>
            </div>
        </div>
    <% end %>
</div>
<div class="pagination-comments">
    <%= erp_datalist_pagination(ratings) %>
</div>