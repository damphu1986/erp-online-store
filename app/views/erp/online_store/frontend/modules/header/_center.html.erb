<div class="header-center">
    <div class="container">
        <div class="row">
            <!-- LOGO -->
            <div class="navbar-logo col-md-2 col-sm-4 col-xs-10 logo">
                <%= link_to image_tag("/frontend/image/logos/logo-cyan.png", title: "Your Store", alt: "Your Store"), erp_online_store.root_path %>
            </div>
            <div class="header-center-right col-md-10 col-sm-8 col-xs-2">
                <div class="responsive so-megamenu megamenu-style-dev">
                    <nav class="navbar-default">
                        <div class=" container-megamenu  horizontal">
                            <div class="navbar-header">
                                <button type="button" id="show-megamenu" data-toggle="collapse" class="navbar-toggle">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="megamenu-wrapper ">
                                <span id="remove-megamenu" class="fa fa-times"></span>
                                <div class="megamenu-pattern">
                                    <div class="container">
                                        <ul class="megamenu " data-transition="slide" data-animationtime="250">
                                            <li class="">
                                                <p class="close-menu"></p>
                                                <a href="<%= erp_online_store.root_path %>" class="clearfix">
                                                    <strong>Trang Chá»§</strong>
                                                    <span class="label"></span>
                                                </a>
                                            </li>
                                            <% Erp::Menus::Menu.get_menu_topbar.each do |menu_topbar| %>
                                            <li class="with-sub-menu hover">
                                                <p class="close-menu"></p>
                                                <a href="javascript:void(0)" class="clearfix">
                                                    <strong><%= menu_topbar.name %></strong>
                                                    <% if menu_topbar.children.count > 0 %>
                                                    <b class="caret"></b>
                                                    <% end %>
                                                </a>
                                                <% if menu_topbar.children.count > 0 %>
                                                <div class="sub-menu" style="width: 100%; right: auto;">
                                                    <div class="content">
                                                        <div class="row">
                                                            <% menu_topbar.children.each do |child_1| %>
                                                            <div class="col-md-3">
                                                                <div class="column">
                                                                    <%= link_to child_1.name, erp_online_store.category_path(menu_id: child_1.id), class: "title-submenu" %>                                                                
                                                                    <div>
                                                                        <ul class="row-list">
                                                                            <% child_1.children.each do |child_2| %>                                                                        
                                                                            <li><%= link_to child_2.name, erp_online_store.category_path(menu_id: child_2.id) %></li>
                                                                            <% end %>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% end %>
                                            </li>
                                            <% end %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>