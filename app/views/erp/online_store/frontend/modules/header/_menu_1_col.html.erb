<li class="item-vertical with-sub-menu hover">
    <p class="close-menu"></p>
    <a href="<%= menu_link(menu) %>">
        <% if menu.menu_icon.present? %>
            <%= image_tag menu.menu_icon.icon, alt: menu.name %>
        <% end %>
        <span class="label"></span>
        <strong>
            <span><%= menu.name %></span>
            <b class="fa fa-angle-right"></b>
        </strong>
    </a>
    <div class="sub-menu" data-subwidth="60">
        <div class="content">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12 static-menu">
                            <div class="menu">
                                <ul>
                                    <% menu_array.each do |child| %>
                                        <li class="<%= child[:class] %>"><%= link_to child[:menu].name, menu_link(child[:menu]), class: "main-menu" %></li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <% if menu.image_menu.present? %>
                <div class="col-md-6">
                    <div class="row banner">
                        <%= link_to image_tag(menu.image_menu.image_menu, alt: menu.image_menu_title), menu.image_menu_link, title: menu.image_menu_title %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</li>
