<div class="header-bottom compact-hidden">
    <div class="container">
        <div class="header-bottom-inner">
            <div class="row">
                <div class="header-bottom-left menu-vertical col-md-3 col-sm-2 col-xs-2">
                    <div class="responsive so-megamenu megamenu-style-dev">
                        <div class="so-vertical-menu no-gutter compact-hidden">
                            <nav class="navbar-default">
                                <% if params[:controller] == 'erp/online_store/frontend/home' && params[:action] == 'index' %>
                                <div class="container-megamenu vertical open">
                                <% else %>
                                <div class="container-megamenu vertical">
                                <% end %>
                                    <div id="menuHeading">
                                        <div class="megamenuToogle-wrapper">
                                            <div class="megamenuToogle-pattern">
                                                <div class="container">
                                                    <div>
                                                        <span></span>
                                                        <span></span>
                                                        <span></span>
                                                    </div>
                                                    Chuyên Mục
                                                    <i class="fa pull-right arrow-circle fa-chevron-circle-up"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="navbar-header">
                                        <button type="button" id="show-verticalmenu" data-toggle="collapse" class="navbar-toggle">
                                            <span class="icon-bar" style="width: 12px;"></span>
                                            <span class="icon-bar" style="width: 16px;"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>
                                    <div class="vertical-wrapper">
                                        <span id="remove-verticalmenu" class="fa fa-times"></span>
                                        <div class="megamenu-pattern">
                                            <div class="container">
                                                <ul class="megamenu">
                                                    <% Erp::Menus::Menu.get_menus.each do |menu| %>
                                                    <li class="item-vertical css-menu with-sub-menu hover">
                                                        <p class="close-menu"></p>
                                                        <a href="javascript:void(0)" class="clearfix">
                                                            <% if menu.menu_icon.present? %>
                                                                <%= image_tag menu.menu_icon.icon, alt: menu.name %>
                                                            <% end %>
                                                            <strong>
                                                                <span><%= menu.name %></span>
                                                                <% if menu.children.count > 0 %>
                                                                <b class="fa fa-angle-right"></b>
                                                                <% end %>
                                                            </strong>
                                                        </a>
                                                        <% if menu.children.count > 0 %>
                                                        <div class="sub-menu" data-subwidth="30" style="width: 270px; display: none; right: 0px;">
                                                            <div class="content" style="display: none;">
                                                                <div class="row">
                                                                    <div class="col-sm-12">
                                                                        <div class="categories ">
                                                                            <div class="row">
                                                                                <div class="col-sm-12 hover-menu">
                                                                                    <div class="menu">
                                                                                        <ul>
                                                                                            <% menu.children.each do |child_1| %>
                                                                                            <li>
                                                                                                <a href="<%= menu_link(child_1) %>" class="main-menu">
                                                                                                    <%= child_1.name %>
                                                                                                    <% if child_1.children.count > 0 %>
                                                                                                    <b class="fa fa-angle-right"></b>
                                                                                                    <% end %>
                                                                                                </a>
                                                                                                <% if child_1.children.count > 0 %>
                                                                                                <ul>
                                                                                                    <% child_1.children.each do |child_2| %>
                                                                                                    <li><%= link_to child_2.name, menu_link(child_2) %></li>
                                                                                                    <% end %>
                                                                                                </ul>
                                                                                                <% end %>
                                                                                            </li>
                                                                                            <% end %>
                                                                                        </ul>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% end %>
                                                    </li>
                                                <% end %>
                                                    <li class="item-vertical">
                                                        <p class="close-menu"></p>
                                                        <a href="#" class="clearfix">
                                                            <strong>
                                                                <span>Thiết bị an ninh</span>
                                                            </strong>
                                                        </a>
                                                    </li>
                                                    <li class="item-vertical">
                                                        <p class="close-menu"></p>
                                                        <a href="#" class="clearfix">
                                                            <strong>
                                                                <span>Ưu đãi khách hàng doanh nghiệp</span>
                                                            </strong>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- Main menu -->
                <div class="header-bottom-right col-md-9 col-sm-10 col-xs-10">
                    <div class="col-lg-9 col-md-8 col-sm-7 col-xs-9 header_search">
                        <!-- Search -->
                        <div id="sosearchpro" class="search-pro">
                            <form method="GET" action="index.html">
                                <div id="search0" class="search input-group autosearch" data-url="<%= erp_online_store.autosearch_path %>">
                                    <div class="select_category filter_type  icon-select">
                                        <select class="no-border" name="category_id">
                                            <option value="">Tất cả chuyên mục</option>
                                            <% Erp::Menus::Menu.get_menus.each do |menu_search| %>
                                            <option value="<%= menu_search.id %>"><%= menu_search.name %></option>
                                            <% end %>
                                        </select>
                                    </div>
                                    <input class="autosearch-input form-control" type="text" value="" size="50" autocomplete="off" placeholder="Nhập từ khóa tìm kiếm" name="search">
                                    <span class="input-group-btn">
                                        <button type="submit" class="button-search btn btn-primary" name="submit_search">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                                <input type="hidden" name="route" value="product/search" />
                            </form>
                        </div>
                        <!-- //end Search -->
                    </div>
                    <div class="block-cart" data-url="<%= erp_online_store.top_cart_path %>">
                        <%= render 'erp/online_store/frontend/shopping_cart/top_cart' %>
                    </div>
                    <div class="header_custom_link hidden-xs">
                        <ul>
                            <% if user_signed_in? %>
                            <li><%= link_to '<i class="fa fa-user"></i> Tài Khoản'.html_safe, erp_online_store.my_account_path %></li>
                            <% else %>
                            <li>
                                <a class="ajax-link" data-type="ajax" href="<%= erp.new_user_session_path %>">
                                    <i class="fa fa-sign-in"></i> Đăng Nhập
                                </a>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
                <!-- //end Main menu -->
            </div>
        </div>
    </div>
</div>
