<% if user_signed_in? %>    
    <ul class="top-link list-inline">
        <li class="account" id="my_account">
            <a href="javascript:void(0)" class="btn btn-xs dropdown-toggle" data-toggle="dropdown"> <span><%= current_user.name %></span> <span class="fa fa-angle-down"></span></a>
            <ul class="dropdown-menu ">
                <li><%= link_to '<i class="fa fa-user"></i> Tài khoản của tôi'.html_safe, erp_online_store.my_account_path %></li>
                <li><%= link_to '<i class="fa fa-opencart"></i> Lịch sử mua hàng'.html_safe, erp_online_store.order_history_path %></li>
                <li><%= link_to '<i class="fa fa-sign-out"></i> Đăng xuất'.html_safe,
                        erp.destroy_user_session_path,
                        method: :delete,
                        redirect_to: erp.backend_path,
                        class: 'link-method'
                    %>
                </li>
            </ul>
        </li>
        <% if @compare.get_number_items > 0 %>
        <li class="compare">
            <a href="<%= erp_online_store.compare_product_path %>" class="top-link-compare" title="So sánh sản phẩm"><span>So sánh (<%= @compare.get_number_items %>)</span></a>
        </li>
        <% end %>
        <li class="form-group languages-block ">
            <form id="bt-language">
                <a class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
                    <%= image_tag "/frontend/image/flags/vi.png", alt: "Tiếng Việt", title: "Tiếng Việt" %>
                    <span>Tiếng Việt</span>
                    <span class="fa fa-angle-down"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to image_tag("/frontend/image/flags/vi.png", alt: "Tiếng Việt", title: "Tiếng Việt", class: "image_flag")+" Tiếng Việt", "#tieng-viet" %></li>
                    </li>
                </ul>
            </form>
        </li>
    </ul>
<% else %>
    <ul class="top-link list-inline">
        <li class="account" id="my_account">
            <a href="javascript:void(0)" class="btn btn-xs dropdown-toggle" data-toggle="dropdown"> <span>Tài Khoản</span> <span class="fa fa-angle-down"></span></a>
            <ul class="dropdown-menu ">                                    
                <li>
                    <a class="ajax-link" data-type="ajax" href="<%= erp.new_user_session_path %>">
                        <i class="fa fa-sign-in"></i> Đăng nhập
                    </a>
                </li>
                <li>
                    <a class="forgot ajax-link" data-type="ajax" href="<%= erp.new_user_registration_path %>">
                        <i class="fa fa-pencil-square-o"></i> Tạo tài khoản
                    </a>
                </li>
            </ul>
        </li>
        <% if @compare.get_number_items > 0 %>
        <li class="compare">
            <a href="<%= erp_online_store.compare_product_path %>" class="top-link-compare" title="So sánh sản phẩm"><span>So sánh (<%= @compare.get_number_items %>)</span></a>
        </li>
        <% end %>
        <li class="form-group languages-block ">
            <form id="bt-language">
                <a class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
                    <%= image_tag "/frontend/image/flags/vi.png", alt: "Tiếng Việt", title: "Tiếng Việt" %>
                    <span>Tiếng Việt</span>
                    <span class="fa fa-angle-down"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to image_tag("/frontend/image/flags/vi.png", alt: "Tiếng Việt", title: "Tiếng Việt", class: "image_flag")+" Tiếng Việt", "#tieng-viet" %></li>
                    </li>
                </ul>
            </form>
        </li>
    </ul>
<% end %>