<ul class="top-link list-inline">
    <% if @compare.get_number_items > 0 %>
    <li class="compare hide-compare">
        <a href="<%= erp_online_store.compare_product_path %>" class="top-link-compare" title="So sánh sản phẩm"><span>So sánh (<%= @compare.get_number_items %>)</span></a>
    </li>
    <% end %>
    <li class="about-us">
    <%= link_to '<span>Về chúng tôi</span>'.html_safe, erp_online_store.about_us_path,
        class: 'top-link-about-us', title: 'Về chúng tôi' %></li>
    <li class="contact-us">
    <%= link_to '<span>Góp ý & Liên hệ</span>'.html_safe, erp_online_store.contact_us_path,
        class: 'top-link-contact-us', title: 'Góp ý & Liên hệ' %></li>
    <% if user_signed_in? %>
    <li class="account" id="my_account">
        <a href="javascript:void(0)" class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
            <span>Xin chào, <%= user_short_name(current_user.name) %></span>
            <span class="fa fa-angle-down"></span>
        </a>
        <ul class="dropdown-menu ">                
            <li><%= link_to '<i class="fa fa-user"></i> Tài khoản của tôi'.html_safe,
                    erp_online_store.my_account_path, title: 'Tài khoản của tôi', rel: 'nofollow' %></li>
            <li><%= link_to '<i class="fa fa-shopping-cart"></i> Đơn hàng của tôi'.html_safe,
                erp_online_store.order_history_path, title: 'Đơn hàng của tôi', rel: 'nofollow' %></li>
            <% if current_user.backend_access %>
            <li><%= link_to '<i class="fa fa-pie-chart"></i> Vào trang quản trị'.html_safe,
                erp.backend_path, title: 'Vào trang quản trị', rel: 'nofollow' %></li>
            <% end %>
            <li><%= link_to '<i class="fa fa-sign-out"></i> Thoát tài khoản'.html_safe,
                erp.destroy_user_session_path,
                method: :delete,
                redirect_to: erp.backend_path,
                class: 'link-method', title: 'Thoát tài khoản', rel: 'nofollow'
            %></li>
        </ul>
    </li>
    <% end %>
</ul>