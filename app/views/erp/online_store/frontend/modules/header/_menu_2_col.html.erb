<li class="item-vertical style1 with-sub-menu hover">
    <p class="close-menu"></p>
    <a href="<%= menu_link(menu) %>">
        <% if menu.menu_icon.present? %>
            <%= image_tag menu.menu_icon.icon, alt: menu.name %>
        <% end %>
        <strong>
            <span><%= menu.name %></span>
            <b class="fa fa-angle-right"></b>
        </strong>
    </a>
    <div class="sub-menu" data-subwidth="100">
        <div class="content">
            <div class="row">
                <div class="col-sm-8">
                    <div class="categories ">
                        <div class="row">
                            <div class="col-sm-6 static-menu">
                                <div class="menu">
                                    <ul>
                                        <% menu_array[0..10].each do |child| %>
                                            <li class="<%= child[:class] %>"><%= link_to child[:menu].name, menu_link(child[:menu]), class: "main-menu" %></li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-sm-6 static-menu">
                                <div class="menu">
                                    <ul>
                                        <% menu_array[11..22].each do |child| %>
                                            <li class="<%= child[:class] %>"><%= link_to child[:menu].name, menu_link(child[:menu]), class: "main-menu" %></li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row img-banner">
                        <%= link_to image_tag("/frontend/image/cms/img-static-megamenu-h.png", alt: ""), "", title: "" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</li>
