<div class="products-list row list">
    <% products.each do |product| %>
    <div class="product-layout  col-md-3 col-sm-6 col-xs-12">
        <div class="product-item-container product-lists">
            <div class="left-block">
                <div class="product-image-container lazy second_img ">
                    <%= image_tag product_image(product.product_images, 'first', 'thumb600'), data: {src: product_image(product.product_images, 'first', 'thumb600')}, alt: product.short_name, class: "img-1 img-responsive" %>
                    <%= image_tag product_image(product.product_images, 'second', 'thumb600'), data: {src: product_image(product.product_images, 'second', 'thumb600')}, alt: product.short_name, class: "img-2 img-responsive" %>
                </div>
                <% if product.is_new? %>
                <span class="label label-new">Mới</span>
                <% end %>
                <% if product.is_deal? %>
                <span class="label label-sale">Giảm giá</span>
                <% end %>
                <%= count_down(product.deal_from_date, product.deal_to_date) %>
            </div>
            <div class="right-block">
                <div class="caption">
                    <h4><%= link_to product.short_name, product_link(product), title: product.short_name, class: "hover-product-name" %></h4>
                    <div class="ratings">
                        <div class="rating-box">
                            <%= stars(product.average_stars) %>
                        </div>
                    </div>
                    <div class="price">
                        <span class="price-new"><%= format_price(product.product_price) %></span>
                        <% if product.is_deal? %>
                        <br><span class="price-old"><%= format_price(product.price) %></span>
                        <span class="label label-percent">-<%= product.deal_percent %>%</span>
                        <% end %>
                    </div>
                    <%= product_list_description(product) %>
                </div>
            </div>
            <!-- right block -->
        </div>
    </div>
    <% end %>
</div>
