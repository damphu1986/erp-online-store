<%= form_tag("", method: "get", class: "category-filter-top") do %>
    <div class="filters-line">
        <div class="row">
            <div class="col-sm-8 col-md-9">
                <% if brands.count > 1 %>
                    <div class="filters-box" style="margin-top: -2px;">
                        <select class="form-control" name="brand_ids[]" multiple="multiple" placeholder="">
                            <% brands.each do |brand| %>
                                <li>
                                    <option value="<%= brand.id %>"><%= brand.name %></option>
                                </li>
                            <% end %>
                        </select>
                        <span class="select2-selection__arrow-mul"></span>
                    </div>
                <% end %>
                <% if defined?(menus) and false %>
                    <div class="filters-box menus-filter-line" style="margin-top: -2px;">
                        <select class="select-ajax" name="menu_id"
                            data-url="<%= erp_online_store.category_select2_path %>"
                            data-placeholder=""
                            multiple="multiple"
                        >
                        </select>
                        <span class="select2-selection__arrow-mul"></span>
                    </div>
                <% end %>
            </div>
            <div class="col-sm-4 col-md-3">
                <div class="filters-box pull-right">
                    <label>Sắp xếp:</label>
                    <select class="form-control" name="sort_by">
                        <option value="" selected="selected">Mặc định</option>
                        <option value="name_asc">Tên (A - Z)</option>
                        <option value="name_desc">Tên (Z - A)</option>
                        <option value="price_asc">Giá (Thấp - Cao)</option>
                        <option value="price_desc">Giá (Cao - Thấp)</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
<% end %>
