<div class="col-sm-9 custom-profile" id="content">
    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" alt="" src="<%= avatar(current_user) %>">
        </div>
        <div class="useravatar">
            <img alt="" src="<%= avatar(current_user) %>">
        </div>
        <div class="card-info"> <span class="card-title"><%= current_user.name %></span></div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="fa fa-heart" aria-hidden="true"></span>
                <div class="hidden-xs button-info">Thông Tin Tài Khoản</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="fa fa-map-marker" aria-hidden="true"></span>
                <div class="hidden-xs button-info">Cập Nhật Liên Hệ</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="fa fa-cog" aria-hidden="true"></span>
                <div class="hidden-xs button-info">Cài Đặt Bảo Mật</div>
            </button>
        </div>
    </div>
    <div class="tab-content profile-tab">
        <div class="tab-pane fade in active" id="tab1">
            <fieldset id="personal-details">
                <legend>Thông tin tài khoản</legend>
                <div class="row">
                    <div class="col-sm-12">
                        <p>Tên người dùng: <strong><%= current_user.name %></strong></p>
                        <p>Email đăng nhập: <strong><%= current_user.email %></strong></p>
                        <p>Quyền người dùng: <strong>Khách hàng</strong></p>
                    </div>
                </div>
                <br />
                <legend>Thông tin liên hệ</legend>
                <div class="row">
                    <div class="col-sm-6">
                        <p>Họ và tên: <strong><%= @contact.name %></strong></p>
                        <p>Sinh nhật: <strong><%= format_date(@contact.birthday) %></strong></p>
                        <p>Giới tính:
                            <strong>
                                <% if @contact.gender == Erp::Contacts::Contact::GENDER_MALE %>
                                    Nam
                                <% elsif @contact.gender == Erp::Contacts::Contact::GENDER_FEMALE %>
                                    Nữ
                                <% else %>
                                    Không xác định
                                <% end %>
                            </strong>
                        </p>
                    </div>
                    <div class="col-sm-6">
                        <p>Số điện thoại: <strong><%= @contact.phone %></strong></p>
                        <p>Địa chỉ email: <strong><%= @contact.email %></strong></p>
                        <p>Loại liên hệ: <strong><%= @contact.contact_type == Erp::Contacts::Contact::TYPE_COMPANY ? 'Công ty / Tổ chức / Doanh nghiệp' : 'Cá nhân' %></strong></p>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="tab-pane fade in" id="tab2">
            <div class="row">
                <%= form_for '', html: {multipart: true} do |f| %>
                    <div class="col-sm-12">
                        <fieldset id="personal-details">
                            <legend>Thông tin cơ bản</legend>
                            <div class="row">    
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="input-lastname" class="control-label">Thêm/cập nhật hình đại diện: </label>
                                        <div class="input-group image-preview">
                                            <input type="text" class="form-control image-preview-filename" disabled
                                                   placeholder="<%= current_user.avatar? ? 'Bạn đã có ảnh đại diện. Thay đổi ảnh khác?' : 'Hãy thêm ảnh đại diện cho tài khoản của bạn.' %>"
                                                />
                                            <span class="input-group-btn">
                                                <!-- image-preview-clear button -->
                                                <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                                                    <span class="fa fa-remove"></span> Bỏ chọn
                                                </button>
                                                <!-- image-preview-input -->
                                                <div class="btn btn-default image-preview-input">
                                                    <span class="fa fa-folder-open"></span>
                                                    <span class="image-preview-input-title">Chọn ảnh</span>
                                                    <input type="file" accept="image/png, image/jpeg, image/gif" name="user[avatar]"/>
                                                </div>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-lastname" class="control-label">Họ & Tên: </label>
                                        <input type="text" class="form-control" id="input-lastname" placeholder="Họ và tên" value="<%= @contact.name %>" name="contact[name]">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-telephone" class="control-label">Số điện thoại: </label>
                                        <input type="tel" class="form-control" id="input-telephone" placeholder="Số điện thoại" value="<%= @contact.phone %>" name="contact[phone]">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-telephone" class="control-label">Địa chỉ email: </label>
                                        <input type="email" class="form-control" id="input-email" placeholder="Địa chỉ email" value="<%= @contact.email %>" name="contact[email]">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="input-date-ordered" class="control-label">Ngày sinh: </label>
                                        <div class="input-group date">
                                            <input type="text" class="form-control" id="input-date-ordered" data-date-format="YYYY-MM-DD" placeholder="Ngày sinh (YYYY/MM/DD)" value="<%= format_date(@contact.birthday) %>" name="contact[birthday]">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="input-date-ordered" class="control-label">Giới tính: </label>
                                        <select class="form-control" id="input-zone" name="contact[gender]">
                                            <option value=""> Chọn giới tính </option>
                                            <option <%= 'selected' if @contact.gender == Erp::Contacts::Contact::GENDER_MALE %> value="<%= Erp::Contacts::Contact::GENDER_MALE %>">Nam</option>
                                            <option <%= 'selected' if @contact.gender == Erp::Contacts::Contact::GENDER_FEMALE %> value="<%= Erp::Contacts::Contact::GENDER_FEMALE %>">Nữ</option> 
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <legend>Địa chỉ đặt hàng</legend>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-province" class="control-label">Tỉnh/Thành</label>
                                        <select class="form-control" id="input-province" name="province_id">
                                            <option value=""> --- Tỉnh/Thành --- </option>
                                            <option value="1">Hồ Chí Minh</option>
                                            <option value="2">Hà Nội</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-district" class="control-label">Quận/Huyện</label>
                                        <select class="form-control" id="input-district" name="district_id">
                                            <option value=""> --- Quận/Huyện --- </option>
                                            <option value="1">Quận 1</option>
                                            <option value="2">Quận 2</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-ward" class="control-label">Phường/Xã</label>
                                        <select class="form-control" id="input-ward" name="ward_id">
                                            <option value=""> --- Phường/Xã --- </option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-address" class="control-label">Số nhà/đường/thôn/ấp: </label>
                                        <input type="text" class="form-control" id="input-address" placeholder="Số nhà, đường, thôn, ấp" value="<%= @contact.address %>" name="contact[address]">
                                    </div>
                                </div>
                            </div>
                        </fieldset>                    
                    </div>
                    <div class="col-sm-12">
                        <div class="buttons clearfix">
                            <div class="pull-right">
                                <input type="submit" class="btn btn-md btn-primary" value="Cập nhật">
                            </div>
                        </div>
                    </div>
                <% end %>          
            </div>
        </div>
        <div class="tab-pane fade in" id="tab3">
            <div class="row">
                <%= form_for '', url: erp_online_store.update_password_path, html: {class: "password_form"} do |f| %>
                    <div class="col-sm-12">
                        <fieldset>
                            <legend>Thay đổi mật khẩu</legend>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group required">
                                        <label for="input-password" class="control-label">Mật khẩu hiện tại: </label>
                                        <input type="password" class="form-control required"
                                               placeholder="Vui lòng cung cấp mật khẩu hiện tại"
                                               name="user[current_password]">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group required">
                                        <label for="input-password" class="control-label">Mật khẩu mới: </label>
                                        <input type="password" class="form-control required"
                                               placeholder="Nhập một mật khẩu mới"
                                               name="user[password]">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group required">
                                        <label for="input-password" class="control-label">Nhập lại mật khẩu mới: </label>
                                        <input type="password" class="form-control required"
                                               placeholder="Nhập một mật khẩu mới"
                                               name="user[password_confirmation]">
                                    </div>
                                </div> 
                            </div>
                        </fieldset>
                    </div>
                    <div class="col-sm-12">
                        <div class="buttons clearfix">
                            <div class="pull-right">
                                <input type="submit" class="btn btn-md btn-primary" value="Cập nhật">
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>