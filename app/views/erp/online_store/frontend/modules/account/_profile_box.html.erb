<div class="col-sm-9 custom-profile" id="content">
    <div class="card hovercard">
        <div class="card-background">
            <img class="card-bkimg" alt="" src="<%= url_for("/frontend/image/avatar/avt_comment.png") %>">
        </div>
        <div class="useravatar">
            <img alt="" src="<%= url_for("/frontend/image/avatar/avt_comment.png") %>">
        </div>
        <div class="card-info"> <span class="card-title">Pamela Anderson</span></div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="fa fa-heart" aria-hidden="true"></span>
                <div class="hidden-xs button-info">Thông tin tài khoản</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="fa fa-map-marker" aria-hidden="true"></span>
                <div class="hidden-xs button-info">Thông tin đặt hàng</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab4" data-toggle="tab"><span class="fa fa-cog" aria-hidden="true"></span>
                <div class="hidden-xs button-info">Cập nhật tài khoản</div>
            </button>
        </div>
    </div>
    <div class="tab-content profile-tab">
        <div class="tab-pane fade in active" id="tab1">
            <fieldset id="personal-details">
                <legend>Thông tin tài khoản</legend>
                <div class="row">
                    <div class="col-sm-6">
                        <p>Họ và tên: <strong>Jenifer Smith</strong></p>
                        <p>Sinh nhật: <strong>26/03/1994</strong></p>
                        <p>Giới tính: <strong>Nam</strong></p>
                    </div>
                    <div class="col-sm-6">
                        <p>Số điện thoại: <strong>(+021) 956 789123</strong></p>
                        <p>Địa chỉ email: <strong>jenifersmith@gmail.com</strong></p>
                        <p>Quyền người dùng: <strong>Khách hàng</strong></p>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="tab-pane fade in" id="tab2">
            <div class="row">
                <div class="col-sm-12">
                    
                    <br>
                    <div class="buttons clearfix">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-md btn-primary" value="Cập nhật">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade in" id="tab3">
            <div class="row">
                <div class="col-sm-12">
                    <fieldset id="address">
                        <legend>Thông tin đặt hàng</legend>
                        <form>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group required">
                                        <label for="input-name" class="control-label">Họ & Tên người nhận: </label>
                                        <input type="text" class="form-control" id="input-name" placeholder="" value="" name="name">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group required">
                                        <label for="input-phone" class="control-label">Số điện thoại: </label>
                                        <input type="text" class="form-control" id="input-phone" placeholder="" value="" name="phone">
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group required">
                                        <label for="input-email" class="control-label">Email: </label>
                                        <input type="text" class="form-control" id="input-email" placeholder="" value="" name="email">
                                    </div>
                                </div> 
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-province" class="control-label">Tỉnh/Thành</label>
                                        <select class="form-control" id="input-province" name="province_id">
                                            <option value=""> --- Tỉnh/Thành --- </option>
                                            <option value="1">Hồ Chí Minh</option>
                                            <option value="2">Hà Nội</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-district" class="control-label">Quận/Huyện</label>
                                        <select class="form-control" id="input-district" name="district_id">
                                            <option value=""> --- Quận/Huyện --- </option>
                                            <option value="1">Quận 1</option>
                                            <option value="2">Quận 2</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-ward" class="control-label">Phường/Xã</label>
                                        <select class="form-control" id="input-ward" name="ward_id">
                                            <option value=""> --- Phường/Xã --- </option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group required">
                                        <label for="input-address" class="control-label">Số điện thoại: </label>
                                        <input type="text" class="form-control" id="input-address" placeholder="Số nhà, đường, thôn, ấp" value="" name="address">
                                    </div>
                                </div>
                            </div>
                            <div class="buttons clearfix">
                                <div class="pull-right">
                                    <input type="submit" class="btn btn-md btn-primary" value="Cập nhật">
                                </div>
                            </div>
                        </form>
                    </fieldset>
                </div>                
            </div>
        </div>
        <div class="tab-pane fade in" id="tab4">
            <div class="row">
                <form>
                <div class="col-sm-12">
                    <fieldset id="personal-details">
                        <legend>Thay đổi thông tin</legend>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group required">
                                    <label for="input-lastname" class="control-label">Họ & Tên: </label>
                                    <input type="text" class="form-control" id="input-lastname" placeholder="Họ và tên" value="" name="lastname">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group required">
                                    <label for="input-telephone" class="control-label">Số điện thoại: </label>
                                    <input type="tel" class="form-control" id="input-telephone" placeholder="Số điện thoại" value="" name="telephone">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group required">
                                    <label for="input-telephone" class="control-label">Địa chỉ email: </label>
                                    <input type="email" class="form-control" id="input-email" placeholder="Địa chỉ email" value="" name="email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="input-date-ordered" class="control-label">Ngày sinh: </label>
                                    <div class="input-group date">
                                        <input type="text" class="form-control" id="input-date-ordered" data-date-format="YYYY-MM-DD" placeholder="Order Date" value="" name="date_ordered">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="input-date-ordered" class="control-label">Giới tính: </label>
                                    <select class="form-control" id="input-zone" name="gender">
                                        <option value=""> Chọn giới tính </option>
                                        <option value="0">Nam</option>
                                        <option value="1">Nữ</option> 
                                    </select>
                                </div>
                            </div>
                        </div>
                    </fieldset>                    
                </div>
                <div class="col-sm-12">
                    <fieldset>
                        <legend>Thay đổi mật khẩu</legend>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group required">
                                    <label for="input-password" class="control-label">Mật khẩu hiện tại: </label>
                                    <input type="password" class="form-control" id="input-password" placeholder="Vui lòng cung cấp mật khẩu hiện tại" value="" name="old-password">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group required">
                                    <label for="input-password" class="control-label">Mật khẩu mới: </label>
                                    <input type="password" class="form-control" id="input-password" placeholder="Nhập một mật khẩu mới" value="" name="new-password">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group required">
                                    <label for="input-password" class="control-label">Nhập lại mật khẩu mới: </label>
                                    <input type="password" class="form-control" id="input-password" placeholder="Nhập một mật khẩu mới" value="" name="new-password">
                                </div>
                            </div> 
                        </div>
                    </fieldset>
                </div>
                <div class="buttons clearfix">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-md btn-primary" value="Cập nhật">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>