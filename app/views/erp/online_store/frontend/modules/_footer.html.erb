                                    ) %>
                                </li>
                                <li>
                                    <%= link_to "Chính sách đổi trả hàng và hoàn tiền", erp_online_store.policy_path(
                                        Erp::Articles::Category.find_by_alias(Erp::Articles::Category::ALIAS_RETURN_REFUND).id,
