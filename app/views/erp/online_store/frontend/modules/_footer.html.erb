<footer class="footer-container typefooter-1">
    <!-- FOOTER TOP -->
    <div class="footer-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="module social_block col-md-3 col-sm-12 col-xs-12">
                        <ul class="social-block ">
                            <li class="facebook"><%= link_to '<i class="fa fa-facebook"></i>'.html_safe, "https://www.facebook.com/TimHangCongNghe/", target: "_blank" %></li>
                            <li class="youtube"><%= link_to '<i class="fa fa-youtube"></i>'.html_safe, "https://www.youtube.com/channel/UC1_KyGKwBDeUpmWsbtrsdcg", target: "_blank" %></li>
                            <li class="google_plus"><%= link_to '<i class="fa fa-google-plus"></i>'.html_safe, "https://plus.google.com/u/4/104468622899810766789", target: "_blank" %></li>
                            <li class="instagram"><%= link_to '<i class="fa fa-instagram"></i>'.html_safe, "https://www.instagram.com/timhangcongnghe.vn/", target: "_blank" %></li>
                            <li class="pinterest"><%= link_to '<i class="fa fa-pinterest"></i>'.html_safe, "https://www.pinterest.com/timhangcongnghe/", target: "_blank" %></li>
                        </ul>
                    </div>
                    <div class="module news-letter col-md-9 col-sm-12 col-xs-12">
                        <div class="newsletter">
                            <div class="title-block">
                                <div class="page-heading">Đăng ký nhận thông tin ưu đãi</div>
                                <div class="pre-text">
                                    Thông tin của bạn sẽ được bảo mật tuyệt đối và bạn có thể hủy đăng ký bất cứ lúc nào.
                                </div>
                            </div>
                            <div class="block_content">
                                <%= form_for Erp::Newsletters::Newsletter.new, url: erp_newsletters.newsletters_path, html: {class: "btn-group form-inline signup"} do |f| %>
                                    <div class="form-group required send-mail">
                                        <div class="input-box">
                                            <input type="text" name="newsletter[email]"
                                                   placeholder="Nhập địa chỉ email của bạn tại đây..."
                                                   class="form-control" size="55" />
                                        </div>
                                        <div class="subcribe">
                                            <button class="btn btn-default btn-lg">
                                                Đăng ký
                                            </button>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- FOOTER CENTER -->
    <div class="footer-center">
        <div class="container content">
