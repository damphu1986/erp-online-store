<div class="moduletable module best-seller">
    <h3 class="modtitle">
        <span>KHUYẾN MÃI</span>
        <%= link_to "Xem tất cả", erp_online_store.deal_products_path, class: "view-all-bestseller", title: "Xem thêm" %>
    </h3>
    <div class="so-extraslider">
        <div class="extraslider-inner best-seller-slider">
            <div class="item ">
            <% count = Erp::Products::Product.get_deal_products.count %>
            <% Erp::Products::Product.get_deal_products.limit(12).each_with_index do |best_seller,index| %>
                <div class="item-wrap style1">
                    <div class="item-wrap-inner media">
                        <div class="media-left">
                            <div class="item-image">
                                <div class="item-img-info">
                                    <a href="<%= product_link(best_seller) %>" class="lt-image" target="_self" title="<%= best_seller.name %>">
                                        <%= image_tag "/frontend/image/shop/product/75/1.jpg", alt: best_seller.name, title: best_seller.name, class: "img-1 img-responsive" %>
                                        <%= image_tag "/frontend/image/shop/product/75/3.jpg", alt: best_seller.name, title: best_seller.name, class: "img-2 img-responsive" %>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="media-body">
                            <div class="item-info">
                                <div class="rating">
                                    <%= raw stars(best_seller.average_stars) %>
                                </div>
                                <div class="item-title">
                                    <%= link_to best_seller.name, product_link(best_seller), title: best_seller.name %>
                                </div>
                                <!-- Begin item-content -->
                                <div class="item-content">
                                    <div class="content_price">
                                        <span class="price product-price">
                                            <%= format_price(best_seller.product_price) %>
                                        </span>
                                        <% if best_seller.is_deal? %>                        
                                        <br><span class="price-old-price"><%= format_price(best_seller.price) %></span>
                                        <span class="product-percent">-<%= best_seller.deal_percent %>%</span>
                                        <% end %>
                                    </div>
                                </div>
                                <!-- End item-content -->
                            </div>
                        </div>
                        <!-- End item-info -->
                    </div>
                    <!-- End item-wrap-inner -->
                </div>
                <!-- End item-wrap -->
                <%= '</div><div class="item ">'.html_safe if index%3 == 2 && index+1 != count %>
                <% end %>
            </div>
        </div>
    </div>
</div>