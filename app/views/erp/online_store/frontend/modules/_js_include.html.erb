<% if !flash.empty? %>
    <% classes = {"success" => "success", "alert" => "alert", "notice" => "notice", "warning" => "warning", "error" => "error"} %>
    <% flash.each do |key, value| %>
        <script>
            // alert('<%= value %>');
            var tpl = '<h3><%= value %></h3>';
            $.jGrowl(tpl, {
                life: 4000,
                header: '<%= t('flash_' + key) %>',
                speed: 'slow',
                theme: '<%= classes[key] %>'
            });

            if ('<%= value %>'.includes('xác minh thành công')) {
              $('.sign-in.ajax-link').trigger('click');
            }
        </script>
    <% end %>
<% end %>

<% if params[:controller] == "erp/online_store/frontend/information" && params[:action] == "contact_us" %>
<script>
    $('.maps').click(function () {
        $('.maps iframe').css("pointer-events", "auto");
    });

    $( ".maps" ).mouseleave(function() {
        $('.maps iframe').css("pointer-events", "none");
    });
</script>
<% end %>