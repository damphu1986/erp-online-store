<div class="row">
    <aside class="col-sm-4 col-md-3" id="column-left">
        <%= render 'erp/online_store/frontend/modules/extensions/sidebar_deal_product' %>
        <%= render 'erp/online_store/frontend/modules/extensions/sidebar_best_seller' %>
        <%= render 'erp/online_store/frontend/modules/extensions/sidebar_hot_banner' %>
    </aside>
    <div id="content" class="col-md-9 col-sm-8">
        <div class="products-category">
            <h1 class="menu-title mb-0">Lựa Chọn Từ Doanh Nghiệp</h1>
            <div class="main-products-list">
                <% if @products.count > 0 %>
                    <div class="products-list row list">
                        <% @products.each do |product| %>
                        <div class="product-layout  col-md-3 col-sm-6 col-xs-6">
                            <a href="<%= product_link(product) %>">
                                <div class="product-item-container product-lists">
                                    <div class="left-block">
                                        <div class="product-image-container second_img ">
                                            <%= image_tag product_image(product.product_images, 'first', 'thumb193'),
                                                data: {src: product_image(product.product_images, 'first', 'thumb193')},
                                                alt: product.get_long_name, title: product.get_long_name, class: 'img-responsive' %></div>
                                        <% if product.is_new? %><span class="label label-new">Mới</span><% end %>
                                        <% if product.is_deal? %><span class="label label-sale">Giảm giá</span><% end %>
                                        <%= count_down(product.deal_from_date, product.deal_to_date) %>
                                    </div>
                                    <div class="right-block">
                                        <div class="caption">
                                            <h2><%= truncate(product.get_short_name, length: 52) %></h2>
                                            <div class="ratings">
                                                <div class="rating-box"><%= stars(product.average_stars) %></div>
                                            </div>
                                            <div class="price">
                                                <% if product.is_sold_out? || product.is_call? || product.product_price.nil? %>
                                                    <span class="price sold_out_true">Liên hệ: (028) 3984 7690</span>
                                                <% else %>
                                                    <span class="price-new"><%= format_price(product.product_price) %></span>
                                                    <% if product.is_deal? %>
                                                    <br><span class="price-old"><%= format_price(product.price) %></span>
                                                    <span class="label label-percent">-<%= product.deal_percent %>%</span>
                                                    <% end %>
                                                <% end %>
                                            </div>
                                            <% if product.short_description.present? %>
                                            <div class="list-product-specs"><%= product.short_description %></div>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% end %>
                    </div>
                    <% if @products.count > 20 %>
                    <div class="product-filter product-filter-bottom filters-panel">
                        <div class="box-pagination text-center">
                            <%= will_paginate @products, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                        </div>
                    </div>
                    <% end %>
                <% else %>
                    <div id="content" class="col-sm-12 shopping-cart">
                        <div class="empty-cart">                    
                            <h2 class="title">Chuyên mục sản phẩm hoặc lựa chọn chưa có sản phẩm phù hợp.</h2>
                            <%= link_to 'Quay về trang chủ', '//timhangcongnghe.com/', class: 'btn btn-default shopping-continue', title: 'Quay lại trang chủ' %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
