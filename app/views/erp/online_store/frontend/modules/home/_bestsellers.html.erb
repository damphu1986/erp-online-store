<div class="product-layout ">
    <div class="product-thumb transition">
        <div class="image">
            <%= link_to image_tag("/frontend/image/shop/product/75/2.jpg", alt: "Apple Cinema 30", class: "img-1 img-responsive"), "", title: "Apple Cinema 30" %>
        </div>
