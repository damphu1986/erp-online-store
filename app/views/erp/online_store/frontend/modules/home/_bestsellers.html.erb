<% bestsellers.limit(2).each do |product| %>
<div class="product-layout ">
    <div class="product-thumb transition">
        <div class="image">
            <%= link_to image_tag(product_image(product.product_images, 'first', 'thumb75'), alt: product.product_name, class: "img-1 img-responsive"), product_link(product), title: product.product_name %>
        </div>
        <div class="caption">
            <div class="rating">
                <%= stars(product.average_stars) %>
            </div>
            <h4><%= link_to truncate(strip_tags(product.product_name), length: 30), product_link(product), title: product.product_name %></h4>
            <p class="price">
                <span class="price-new"> <%= format_price(product.product_price) %></span>
                <% if product.is_deal? %>     
                <span class="price-old"> <%= format_price(product.price) %></span>
                <% end %>
            </p>
        </div>
    </div>
</div>
<% end %>