<section id="bt-business-news" class="bt-sectionpadding bt-haslayout">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="bt-fullheading bt-styletwo">
                    <h2>Bản Tin Doanh Nghiệp</h2>
                </div>
            </div>
            <div id="bt-postsslider" class="bt-posts bt-postsslider">                
                <% (0..3).each do |our_publication| %>
                <div class="item">                  
                    <article class="bt-post">
                        <figure>
                            <%= link_to image_tag("/frontend/business-template/images/blog/img-01.jpg", alt: ""), "", title: "" %>
                            <figcaption>
                                <time datetime="08-11-2017">08-11-2017</time>
                            </figcaption>
                        </figure>
                        <div class="bt-postcontent">
                            <ul class="bt-postmetadata">
                                <li>Đăng Bởi: <%= link_to "TimHangCongNghe.vn", "avascript:void(0);", class: "float-right" %></li>
                                <li>Chuyên Mục: <%= link_to "Bản Tin Doanh Nghiệp", "avascript:void(0);", class: "float-right" %></li>
                            </ul>
                            <div class="bt-posttitle">
                                <h3><%= link_to "Tiêu đề bài viết bản tin doanh nghiệp", erp_online_store.news_detail_path %></h3>
                            </div>
                            <div class="bt-description">
                                <p>
                                  Nội dung của bài viết................
                                </p>
                            </div>
                            <%= link_to "XEM CHI TIẾT", erp_online_store.news_detail_path, class: "bt-btn" %>
                        </div>
                    </article>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>