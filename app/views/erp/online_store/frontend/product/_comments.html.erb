<hr>
<div id="comments">
    <h3 id="review-title">Có <%= comments.count %> bình luận cho sản phẩm này</h3>
    
    <div class="commentlist">
        <% comments.order('created_at DESC').each do |comment| %>
            <div id="comment-181" class="comment even thread-even depth-1 media">
                <div class="author">
                    <a class="pull-left" href="#">
                        <img alt="" src="/frontend/image/avatar/avt_comment.png" class="avatar pull-left media-object avatar-64 photo">
                    </a>
                </div>
                <div class="media-body">
                    <div class="media">
                        <div class="media-heading">
                            <div class="author-name">
                                <strong><a href="#"><%= comment.name %></a></strong>
                            </div>
                        </div>
                        <div class="media-content row-fluid">
                            <p><%= comment.message %></p>
                            <a onclick="" rel="nofollow" class="right comment-reply-link" href="#reply"
                               aria-label="Reply to <%= comment.name %>"><i class="fa fa-reply"></i> Trả lời</a>                            
                            <a class="right favor satis" href="javascript:void(null)"><i class="fa fa-trash"></i> Xóa</a>
                            <time class="right"><%= relative_time(comment.created_at) %></time>
                        </div>
                        <div class="reply-box" style="display: none">
                            <%= form_for Erp::Products::Comment.new, url: "", html: {class: "comment_form"} do |f| %>
                                <div id="comments" class="blog-comment-info">
                                    <h3 id="review-title" style="margin-top: 0;">Trả lời bình luận </h3>
                                    <input type="hidden" name="comment[product_id]" value="<%= @product.id %>" />
                                    <input type="hidden" name="comment[parent_id]" value="<%= comment.id %>" />
                                    <div class="comment-left contacts-form row">
                                        <div class="col-md-6">
                                            <b>Họ tên (bắt buộc):</b>
                                            <br>
                                            <input type="text" name="comment[name]" value class="form-control required" placeholder="Nhập họ tên của bạn">
                                            <br>
                                        </div>
                                        <div class="col-md-6">
                                            <b>Địa chỉ email:</b>
                                            <br />
                                            <input type="email" name="comment[email]" value class="form-control required" placeholder="Nhập đúng định dạng email (Ví dụ: tenban@gmail.com)">
                                            <br />
                                        </div>
                                        <div class="col-md-12">
                                            <b>Lời bình luận:</b>
                                            <br />
                                            <textarea name="comment[message]" class="form-control required" placeholder="Nội dung bình luận, xin vui lòng nhập tiếng Việt có dấu."></textarea>
                                        </div>
                                        
                                    </div>
                                    <br>
                                    <div class="text-left">
                                        <button class="btn buttonGray" id="button-comment" type="submit">
                                            <span>Gửi bình luận</span>
                                        </button>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
            <% if comment.children.count > 0 %>
                <ul class="children">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <td>
                                    <% comment.children.order('created_at DESC').each do |child_comment| %>
                                        <div id="comment-182" class="comment odd alt depth-2 media">
                                            <div class="author">
                                                <a class="pull-left" href="hung">
                                                    <img alt="" src="/frontend/image/avatar/avt_comment.png" class="avatar pull-left media-object avatar-64 photo">
                                                </a>
                                            </div>
                                            <div class="media-body">
                                                <div class="media">
                                                    <div class="media-heading">
                                                        <div class="author-name">
                                                            <strong><a href="#"><%= child_comment.name %></a></strong><span class="label">Quản trị viên</span>
                                                        </div>
                                                    </div>
                                                    <div class="media-content row-fluid">
                                                        <p><%= child_comment.message %></p>
                                                         <a class="right favor satis" href="javascript:void(null)"><i class="fa fa-remove"></i> Xóa</a>
                                                        <time class="right"><%= relative_time(child_comment.created_at) %></time>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </ul>
            <% end %>
        <% end %>
        <div class="pagination-comments">
            <%= erp_datalist_pagination(comments) %>
        </div>
    </div>
</div>
<script>
    $(document).ready( function() {
        $('.comment_form').validate();
    })
</script>