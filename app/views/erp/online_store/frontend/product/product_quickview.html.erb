                    }
                }
                var wishlist = {
                    'add': function(product_id) {
                        parent.addProductNotice('Product added to Wishlist', '<img src="/frontend/image/shop/product/e11.jpg" alt="">', '<h3>You must <a href="#">login</a>  to save <a href="#">Apple Cinema 30"</a> to your <a href="#">wish list</a>!</h3>', 'success');
                    }
