<% title (params[:cat_id].present? ? @category.name : 'Tin Công Nghệ') %>
<% content_for :metas do %>
<meta property="og:locale" content="vi-VN" />
<meta property="og:type" content="website"/>
<meta property="og:title" content="<%= params[:cat_id].present? ? @category.name : 'Tin Công Nghệ'  %> | Tìm Hàng Công Nghệ"/>
<meta property="og:description" content="Tìm Hàng Công Nghệ là đơn vị cung cấp các sản phẩm, dịch vụ thuộc lĩnh vực Công Nghệ Thông Tin do Công Ty TNHH Giải Pháp CNTT Và Truyền Thông Hoàng Khang phụ trách và phát triển."/>
<meta property="og:url" content="<%= request.url %>"/>
<meta property="og:site_name" content="Tìm Hàng Công Nghệ" />
<meta property="og:image" content="https://timhangcongnghe.com/frontend/img/sys/thcn-web-share.jpg"/>
<meta property="og:image:alt" content="<%= params[:cat_id].present? ? @category.name : 'Tin Công Nghệ'  %> | Tìm Hàng Công Nghệ"/>
<meta property="og:image:width" content="1200"/>
<meta property="og:image:height" content="628"/>

<meta name="twitter:card" content="summary"/>
<meta name="twitter:site" content="<%= request.url %>"/>
<meta name="twitter:title" content="<%= params[:cat_id].present? ? @category.name : 'Tin Công Nghệ'  %> | Tìm Hàng Công Nghệ" />
<meta name="twitter:description" content="Tìm Hàng Công Nghệ là đơn vị cung cấp các sản phẩm, dịch vụ thuộc lĩnh vực Công Nghệ Thông Tin do Công Ty TNHH Giải Pháp CNTT Và Truyền Thông Hoàng Khang phụ trách và phát triển."/>
<meta name="twitter:image" content="https://timhangcongnghe.com/frontend/img/sys/thcn-web-share.jpg"/>
<% end %>
<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path, title: 'Tìm Hàng Công Nghệ' %></li>
        <% if params[:cat_id].present? %>
            <li><%= link_to 'Tin Công Nghệ', erp_online_store.blog_path, title: 'Tin Công Nghệ' %></li>
            <li><%= link_to @category.name, 'javascript:void(0)', title: @category.name %></li>
        <% else %>
            <li><%= link_to 'Tin Công Nghệ', 'javascript:void(0)', title: 'Tin Công Nghệ' %></li>
        <% end %>
    </ul>
    <div class="row">
        <aside class="col-sm-4 col-md-3" id="column-left">
            <%= render "erp/online_store/frontend/modules/blog/categories" %>
            <%= render "erp/online_store/frontend/modules/extensions/sidebar_best_seller" %>
            <%= render "erp/online_store/frontend/modules/extensions/sidebar_hot_banner" %>
        </aside>
        <div id="content" class="col-md-9 col-sm-8">
            <% if params[:cat_id].present? %>
            <div class="blog-header"><h1><%= @category.name %></h1></div>
            <% else %>
            <div class="blog-header"><h1>Tin Công Nghệ</h1></div>
            <% end %>
            <div class="blog-listitem <%= params[:cat_id].present? ? '' : 'blog-listitem-notitle' %>">
                <% if @blogs.count > 0 %>
                    <% @blogs.each do |blog| %>
                    <div class="blog-item ">
                        <div class="itemBlogImg col-md-4 col-sm-12">
                            <div class="article-image banners">
                                <div><%= image_tag blog.image.thumb270x175, alt: blog.name, title: blog.name %></div>
                            </div>
                        </div>
                        <div class="itemBlogContent col-md-8 col-sm-12">
                            <div class="article-title"><h4><%= link_to blog.name, article_link(blog), title: blog.name %></h4></div>
                            <div class="article-sub-title">
                                <span class="article-date">
                                  <i class="fa fa-calendar"></i><%= blog.created_at.strftime("%d/%m/%Y %I:%M %p") %>
                                </span>
                            </div>
                            <div class="article-description"><%= truncate(blog.meta_description, length: 300) %></div>
                        </div>
                    </div>
                    <% end %>
                <% else %>
                    <div class="alert alert-warning"><i class="fa fa-warning"></i> Hiện chưa có bài viết cho mục này.</div>
                <% end %>
            </div>
        </div>
    </div>
</div>