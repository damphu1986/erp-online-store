<!--cart-->
<div class="shopping_cart pull-right">
    <div id="cart" class=" btn-group btn-shopping-cart">
        <a data-loading-text="Đang tải giỏ hàng..." class="btn-group top_cart dropdown-toggle" data-toggle="dropdown">
            <div class="shopcart">
                <span class="handle pull-left"></span>
                <span class="text-shopping-cart hidden-xs">Giỏ hàng (<%= @cart.cart_items.number_items %>)</span>
                <span class="text-shopping-cart-mobi hidden-lg hidden-md hidden-sm ">
                    <i class="fa fa-opencart"></i>
                </span>
            </div>
        </a>
        <ul class="tab-content content dropdown-menu pull-right shoppingcart-box" role="menu">
            <% if @cart.cart_items.number_items > 0 %>
            <li>
                <table class="table table-striped">
                    <tbody>
                        <% @cart.cart_items.each do |cart_item| %>
                        <tr>
                            <td class="text-center" style="width:70px">
                                <%= link_to image_tag(product_image(cart_item.product.product_images, 'first', 'thumb99'), width: "70px", alt: cart_item.product_name, title: cart_item.product_name, class: "preview"), product_link(cart_item.product) %>
                            </td>
                            <td class="text-left"><%= link_to cart_item.product_name, product_link(cart_item.product), class: "cart_product_name top_cart_list", title: cart_item.product_name %></td>
                            <td class="text-center shopping-cart-price"><%= format_price(cart_item.product_price) %>x<%= cart_item.quantity %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </li>
            <li>
                <div>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td class="text-left">
                                    <strong>TỔNG TIỀN:</strong>
                                </td>
                                <td class="text-right"><%= format_price(@cart.total_order) %></td>
                            </tr>
                        </tbody>
                    </table>
                    <p class="text-center">
                        <%= link_to '<i class="fa fa-opencart"></i> GIỎ HÀNG'.html_safe, erp_online_store.shopping_cart_path, class: "btn view-cart shopping-actions" %>
                        &nbsp;&nbsp;&nbsp;
                        <% if user_signed_in? %>
                            <%= link_to '<i class="fa fa-share"></i> ĐẶT HÀNG'.html_safe, erp_online_store.checkout_path, class: "btn btn-mega checkout-cart shopping-actions" %>
                        <% else %>
                            <%= link_to '<i class="fa fa-share"></i> ĐẶT HÀNG'.html_safe, erp.new_user_session_path, class: "btn btn-mega checkout-cart shopping-actions ajax-link", "data-type": "ajax" %>
                        <% end %>
                    </p>
                </div>
            </li>
            <% else %>
                <li>
                    <div class="text-center">
                        <h3>GIỎ HÀNG ĐANG TRỐNG</h3>
                        <p>Giỏ hàng hiện tại của bạn đang trống.</p>
                        <p class="text-center">
                            <%= link_to '<i class="fa fa-opencart"></i> GIỎ HÀNG'.html_safe, erp_online_store.shopping_cart_path, class: "btn view-cart" %>
                        </p>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>
<!--//cart-->