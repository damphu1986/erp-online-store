<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= link_to "Giỏ hàng", "javascript:void(0)" %></li>
    </ul>
    <div class="row">
        <!--Middle Part Start-->
        <div id="content" class="col-sm-12">
            <% if @cart.cart_items.number_items > 0 %>
            <h2 class="title">Giỏ hàng của bạn</h2>
            <%= form_for([erp_online_store, :frontend, @cart]) do |f| %>
            <div class="table-responsive form-group">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td class="text-center">Hình ảnh</td>
                            <td class="text-left">Tên sản phẩm</td>
                            <td class="text-left">Số lượng</td>
                            <td class="text-right">Giá sản phẩm</td>
                            <td class="text-right">Thành tiền</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% @cart.cart_items.each do |cart_item| %>
                        <tr>
                            <td class="text-center">
                                <%= link_to image_tag("/frontend/image/shop/product/e3.jpg", alt: cart_item.product.name, title: cart_item.product.name, class: "img-thumbnail", width: "70"), erp_online_store.product_detail_path(product_id: cart_item.product.id) %>
                            </td>
                            <td class="text-left">
                                <%= link_to cart_item.product.name, erp_online_store.product_detail_path(product_id: cart_item.product.id), title: cart_item.product.name %><br />
                                <small>Mô tả sản phẩm</small>
                            </td>                            
                            <td class="text-left" width="200px">
                                <div class="input-group btn-block quantity">
                                    <input class="form-control" type="text" name="quantities[<%= cart_item.id %>]" value="<%= cart_item.quantity %>">
                                    <span class="input-group-btn">
                                        <button type="submit" data-toggle="tooltip" title="Cập nhật số lượng" class="btn btn-primary"><i class="fa fa-refresh"></i></button>
                                        <%= link_to '<i class="fa fa-times-circle"></i>'.html_safe, erp_online_store.remove_cart_item_frontend_cart_items_path(cart_item_id: cart_item.id), class: "btn btn-danger", title: "Xóa sản phẩm" %>
                                    </span>
                                </div>
                            </td>
                            <td class="text-right"><%= format_number(cart_item.product.price) %> VNĐ</td>
                            <td class="text-right"><%= format_number(cart_item.total_price) %> VNĐ</td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <% end %>
            <div class="row">
                <div class="col-sm-4 col-sm-offset-8">
                    <table class="table table-bordered">
                        <tr>
                            <td class="text-right"><strong>Tổng tiền:</strong></td>
                            <td class="text-right"><%= format_number(@cart.total_order) %> VNĐ</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="buttons">
                <div class="pull-left"><%= link_to "Tiếp tục mua hàng", erp_online_store.root_path, class: "btn btn-default" %></div>
                <div class="pull-right"><%= link_to "Tiến hành đặt hàng", erp_online_store.checkout_path, class: "btn btn-primary" %></div>
            </div>
            <% else %>
                <h2 class="title">Giỏ hàng của bạn hiện chưa có sản phẩm.</h2>
                <div class="buttons">
                    <div class="pull-left"><%= link_to "Tiếp tục mua hàng", erp_online_store.root_path, class: "btn btn-default" %></div>                
                </div>
            <% end %>
        </div>
        <!--Middle Part End -->
    </div>
</div>