<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= link_to "Sản Phẩm Bán Chạy Nhất", "javascript:void(0)" %></li>
    </ul>
    <div class="row">
        <!--Left Part Start -->
        <aside class="col-sm-4 col-md-3" id="column-left">
              <div class="module menu-category titleLine">
                <h3 class="modtitle">
                  <span>
                    <i class="fa fa-angle-double-right"></i>
                    Chuyên Mục
                  </span>
                </h3>
                <div class="modcontent">
                    <div class="box-category">
                        <ul id="cat_accordion" class="list-group">
                            <% (0..4).each do |category| %>
                            <li class="hadchild cutom-parent-li"><%= link_to 'Sản Phẩm HP (100) <span class="dcjq-icon"></span>'.html_safe, "", class: "cutom-parent" %>
                                <span class="button-view  fa fa-plus-square-o"></span>
                                <ul style="display: none;">
                                    <li><%= link_to "Máy Tính Để Bàn (20)", "" %></li>
                                    <li><%= link_to "Máy Chủ - Server (20)", "" %></li>
                                    <li><%= link_to "Thiết Bị Chuyển Mạch (20)", "" %></li>
                                    <li><%= link_to "Thiết Bị Lưu Trữ (20)", "" %></li>
                                    <li><%= link_to "Máy Tính Xách Tay (20)", "" %></li>
                                </ul>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="module block-shopby titleLine">                
                <h3 class="modtitle">
                    <span>
                        <i class="fa fa-futbol-o "></i> Tìm Hàng Công Nghệ
                    </span>
                </h3>
                <div class="modcontent ">
                    <%= form_tag(erp_online_store.deal_products_path, method: "get", class: "type_2") do %>
                        <div class="table_layout filter-shopby">
                            <div class="table_row">                    
                                <!-- - - - - - - - - - - - - - Brand - - - - - - - - - - - - - - - - -->
                                <div class="table_cell">
                                    <fieldset>
                                        <legend>Thương hiệu sản phẩm</legend>
                                        <ul class="checkboxes_list">
                                            <li>
                                                <input type="checkbox" name="" id="brand">
                                                <label for="brand">Apple</label>
                                            </li>
                                            <li>
                                                <input type="checkbox" name="" id="brand">
                                                <label for="brand">Dell</label>
                                            </li>
                                            <li>
                                                <input type="checkbox" name="" id="brand">
                                                <label for="brand">HP</label>
                                            </li>
                                            <li>
                                                <input type="checkbox" name="" id="brand">
                                                <label for="brand">Lenovo</label>
                                            </li>
                                            <li>
                                                <input type="checkbox" name="" id="brand">
                                                <label for="brand">Asus</label>
                                            </li>
                                        </ul>
                                    </fieldset>
                                </div>
                                <!-- - - - - - - - - - - - - - End brand - - - - - - - - - - - - - - - - -->
                                
                                <!-- - - - - - - - - - - - - - Price - - - - - - - - - - - - - - - - -->
                                <div class="table_cell">
                                    <fieldset>
                                        <legend>Mức giá sản phẩm</legend>
                                        <div class="range">
                                            Mức giá :
                                            <span class="min_val">$188.73</span> -
                                            <span class="max_val">$335.15</span>
                                            <input type="hidden" name="" class="min_value" value="188.73">
                                            <input type="hidden" name="" class="max_value" value="335.15">
                                        </div>
                                        <div id="slider" class="ui-slider ui-slider-horizontal ui-widget ui-widget-content ui-corner-all">
                                            <div class="ui-slider-range ui-widget-header ui-corner-all"></div>
                                            <span class="ui-slider-handle ui-state-default ui-corner-all"></span>
                                            <span class="ui-slider-handle ui-state-default ui-corner-all"></span>
                                        </div>
                                    </fieldset>
                                </div>
                                <!--/ .table_cell -->
                                <!-- - - - - - - - - - - - - - End price - - - - - - - - - - - - - - - - -->
                            </div>
                            <!--/ .table_row -->
                        </div>
                        <!--/ .table_layout -->
                    <% end %>
                </div>
            </div>
            <%= render "erp/online_store/frontend/modules/sidebar_best_sellers" %>
            <%= render "erp/online_store/frontend/modules/hot_banners" %>
        </aside>
        <!--Left Part End -->
        <!--Middle Part Start-->
        <div id="content" class="col-md-9 col-sm-8">
            <div class="products-category">
                <% if @products.count > 0 %>
                <!--changed listings-->
                <div class="products-list row list">
                    <% @products.each do |product| %>
                    <div class="product-layout  col-md-3 col-sm-6 col-xs-12">
                        <div class="product-item-container product-lists">
                            <div class="left-block">
                                <div class="product-image-container lazy second_img ">
                                    <%= image_tag "/frontend/image/shop/product/e11.jpg", data: {src: "/frontend/image/shop/product/e11.jpg"}, alt: product.name, class: "img-1 img-responsive" %>
                                    <%= image_tag "/frontend/image/shop/product/e12.jpg", data: {src: "/frontend/image/shop/product/e12.jpg"}, alt: product.name, class: "img-2 img-responsive" %>
                                </div>
                                <% if product.is_new? %>
                                <span class="label label-bestseller">Bán Chạy</span>
                                <% end %>
                                <% if product.is_deal? %>
                                <span class="label label-sale">Giảm giá</span>
                                <% end %>
                                <div class="countdown_box">
                                    <div class="countdown_inner">
                                        <div class="defaultCountdown-30"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="right-block">
                                <div class="caption">
                                    <h4><%= link_to product.name, erp_online_store.product_detail_path(product_id: product.id), title: product.name, class: "hover-product-name" %></h4>
                                    <div class="price">
                                        <span class="price-new"><%= format_price(product.product_price) %></span>
                                        <% if product.is_deal? %>                        
                                        <br><span class="price-old"><%= format_price(product.price) %></span>
                                        <span class="label label-percent">-<%= product.deal_percent %>%</span>
                                        <% end %>                                             
                                    </div>
                                    <% if product.short_description.present? %>
                                    <div class="description product-description">
                                        <p><%= product.short_description.html_safe %></p>
                                    </div>
                                    <% end %>
                                </div>
                            </div>
                            <!-- right block -->
                        </div>
                    </div>
                    <% end %>
                </div>
                <!--// End Changed listings-->
                <!-- Pagination -->
                <div class="product-filter product-filter-bottom filters-panel">
                    <div class="box-pagination text-center">
                        <%= will_paginate @products, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
                    </div>
                </div>
                <!-- End Pagination -->
                <% else %>
                    <div class="alert alert-warning">
                        <i class="fa fa-warning"></i> Hiện chưa có sản phẩm cho chuyên mục này.
                    </div>
                <% end %>
            </div>
        </div>
        <!--Middle Part End-->
    </div>
</div>