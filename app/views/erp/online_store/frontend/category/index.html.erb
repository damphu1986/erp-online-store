<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= link_to @menu.name, "javascript:void(0)" %></li>
    </ul>
    <div class="row">
        <!--Left Part Start -->
        <aside class="col-sm-4 col-md-3" id="column-left">
            <%= render "erp/online_store/frontend/category/category_left_part", menu: @menu %>
        </aside>
        <!--Left Part End -->
        <!--Middle Part Start-->
        <div id="content" class="col-md-9 col-sm-8">
            <div class="products-category">
                <% if @menu.image_url_2.present? || @menu.description.present? %>
                <div class="category-derc form-group">
                    <div class="row">
                        <div class="col-sm-12">
                            <% if @menu.image_url_2.present? %>
                            <p><%= image_tag @menu.image_url_2, alt: @menu.name %><br></p>
                            <% end %>
                            <% if @menu.description.present? %>
                            <p><%= @menu.description.html_safe %></p>
                            <% end %>
                        </div>
                    </div>
                </div>
                <% end %>
                <% if @related_menus.count > 0 %>
                <!--- Realed menus - -->
                <div class="refine-search form-group">
                    <div class="row">
                        <% @related_menus.each do |related_menu| %>
                        <div class="form-group col-md-15 col-sm-4 col-xs-12 ">
                            <%= link_to image_tag("/frontend/image/shop/product/m2.jpg", alt: related_menu.menu.name, title: related_menu.menu.name), erp_online_store.category_path(menu_id: related_menu.menu.id), class: "thumbnail", target: "_blank" %>
                            <%= link_to related_menu.menu.name, erp_online_store.category_path(menu_id: related_menu.menu.id), title: related_menu.menu.name, target: "_blank" %>
                        </div>
                        <% end %>
                    </div>
                </div>
                <!---//End related ends --->
                <% end %>
                <% if @products.count > 0 %>
                <!-- Filters -->
                <%= render "erp/online_store/frontend/category/category_middle_part_top" %>
                <!-- //end Filters -->
                <% end %>
                <!--changed listings-->
                <%= render "erp/online_store/frontend/category/category_middle_part_center", products: @products, menu: @menu %>
                <!--// End Changed listings-->
                <% if @products.count > 0 %>
                <!-- Filters -->
                <%= render "erp/online_store/frontend/category/category_middle_part_bottom" %>
                <!-- //end Filters -->
                <% end %>
            </div>
        </div>
        <!--Middle Part End-->
    </div>
</div>