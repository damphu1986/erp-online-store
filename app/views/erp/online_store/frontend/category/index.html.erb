<div class="main-container container">
    <ul class="breadcrumb">
        <li><%= link_to '<i class="fa fa-home"></i>'.html_safe, erp_online_store.root_path %></li>
        <li><%= link_to @menu.name, "javascript:void(0)" %></li>
    </ul>
    <div class="row">
        <!--Left Part Start -->
        <aside class="col-sm-4 col-md-3" id="column-left">
            <%= render "erp/online_store/frontend/category/category_left_part" %>
        </aside>
        <!--Left Part End -->
        <!--Middle Part Start-->
        <div id="content" class="col-md-9 col-sm-8">
            <div class="products-category">
                <div class="category-derc form-group">
                    <div class="row">
                        <div class="col-sm-12">
                            <p><%= image_tag "/frontend/image/shop/category/electronic-cat.png", alt: @menu.name %><br></p>
                            <p>Mô tả cho chuyên mục</p>
                        </div>
                    </div>
                </div>
                <!--- Subcategories - -->
                <div class="refine-search form-group">
                    <div class="row">
                        <% (0..4).each do |related_category| %>
                        <div class="form-group col-md-15 col-sm-4 col-xs-12 ">
                            <%= link_to image_tag("/frontend/image/shop/product/m2.jpg", alt: "Car Alarms and Security"), "", class: "thumbnail" %>
                            <%= link_to "Car Alarms and Security", "" %>
                        </div>
                        <% end %>
                    </div>
                </div>
                <!---//Subcategories --->
                <% if @products.count > 0 %>
                <!-- Filters -->
                <%= render "erp/online_store/frontend/category/category_middle_part_top" %>
                <!-- //end Filters -->
                <% end %>
                <!--changed listings-->
                <%= render "erp/online_store/frontend/category/category_middle_part_center", products: @products %>
                <!--// End Changed listings-->
                <% if @products.count > 0 %>
                <!-- Filters -->
                <%= render "erp/online_store/frontend/category/category_middle_part_top" %>
                <!-- //end Filters -->
                <% end %>
            </div>
        </div>
        <!--Middle Part End-->
    </div>
</div>